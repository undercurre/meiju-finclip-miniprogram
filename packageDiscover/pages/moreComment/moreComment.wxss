.containers{
  background: #FFFFFF;
}
.clear:after {
  clear: both;
  content: ' ';
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

.inner_box{
  background: #F9F9F9;
  border-radius: 8px;
  padding: 32rpx;
}
.content_s{
  padding :32rpx 32rpx 16rpx 32rpx;
}
.big_itle{
  display: block;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 40rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}
.content_line{
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  line-height: 40rpx;
  font-weight: 400;
}

.more_lines{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8A8A8F;
