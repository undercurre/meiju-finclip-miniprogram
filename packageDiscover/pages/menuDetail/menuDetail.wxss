/* pages/menuDetail/menuDetail.wxss */
.overall-view {
  margin-left: 16px;
  margin-right: 16px;
}

.desc-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.desc-title-view {
  display: flex;
  flex-direction: row;
  justify-items: center;
  margin-top: 20px;
}

.desc-view-title {
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}

.desc-view-title-label {
  font-family: PingFangSC-Medium;
  font-size: 10px;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  opacity: 0.6;
  background: #000000;
  border-radius: 2px;
  margin-left: 12px;
  padding-left: 4px;
  padding-right: 4px;
}

.desc-view-content {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8a8a8f;
  letter-spacing: 0;
  text-align: left;
  line-height: 20px;
  margin-top: 20px;
}

.header-img {
  width: 750rpx;
  height: 468rpx;
}

.group-view {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20px;
}

.group-subview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.group-subview-label {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8a8a8f;
  letter-spacing: 0;
  text-align: center;
  line-height: 12px;
}

.group-subview-value {
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 18px;
}

.group-view-desc {
  display: flex;
  margin-top: 20px;
  background: #f9f9f9;
  border-radius: 2px;
  width: 100%;
  height: 26px;
  align-items: center;
}

.group-view-desc-label {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8a8a8f;
  letter-spacing: 0;
  text-align: center;
  line-height: 12px;
  margin-left: 12px;
}

.main-view-detail view {
  display: flex;
  justify-content: space-between;
}

.assist-view-detail view {
  display: flex;
  justify-content: space-between;
}

.main-view-title {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  margin-top: 30px;
  margin-bottom: 30px;
}

.main-view-detail-subview {
  margin-top: 10px;
  height: 40px;
}

.main-view-detail-label {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  line-height: 16px;
}

.main-view-detail-value {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666666;
  letter-spacing: 0;
  text-align: right;
  line-height: 14px;
}

.steps-view {
  padding-bottom: 60px;
}

.step-detail-title {
  margin-top: 20px;
}

.step-detail-title text {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  line-height: 18px;
}

.step-detail-img {
  margin-top: 20px;
  height: 221px;
}

.step-detail-img image {
  width: 100%;
  height: 221px;
  border-radius: 8px;
}

.step-detail-content text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}

/* 自定义返回按钮 */
.back-btn {
  position: fixed;
  left: 23px;
  top: 32px;
  width: 40px;
  height: 40px;
}
.back-img {
  width: 15px;
  height: 16px;
  display: block;
}
.card-list {
  width: 750rpx;
  height: 468rpx;
  position: relative;
}

.icon-img {
  width: 20px;
  height: 20px;
}

.mask-view {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 176rpx;
}

.mask-image {
  width: 750rpx;
  height: 176rpx;
}
.desc-source {
  font-size: 10px;
  color: #bbbbbb;
  text-align: center;
  margin: 10px 0 4px 0;
}
