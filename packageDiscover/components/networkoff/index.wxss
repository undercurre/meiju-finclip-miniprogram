.networkless {
  width: 100%;
  /* height: 100vh; */
  /* background: #f9f9f9; */
  box-sizing: border-box;
}
.networkless-img {
  display: block;
  margin: 0 auto;
  width: 320rpx;
  height: 320rpx; 
}
.networkless-text {
  margin: 44rpx 0 60rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8A8A8F;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 400;
}
.networkless-btn {
  display: flex;
  margin: 0 auto;
  width: 240rpx;
  height: 64rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #267AFF;
  font-weight: 500;
  border-radius: 32rpx;
  border: 1rpx solid #267AFF;
}
