/* 新增加的样式 */
.trys{
  padding:0 32rpx;
  background: #ffffff;
  display: inline-block;
  width: 686rpx;
}

.block-box0{
  /* padding: 0 32rpx; */
  border-radius: 24rpx;
}
.block-box0 .try-title{
  height: 96rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.left-big-title{
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
}

.right-more{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
}

.icon-content-l{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: -0.78rpx;
  font-weight: 400;
}

.icon-right{
  height: 20rpx;
  width: 20rpx;
  margin-left: 12rpx;
}

.scroll-item-refs0{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 16rpx;
  background: #F9F9F9;
  border-radius: 24rpx;
}
/* .scroll-item-refs:last-child{
  border: none;
} */
.card-des-refs {
  display: flex;
  flex-direction: column;
  /* align-items: flex-start; */
  justify-content: space-between;
  /* margin-left: 8px;
  width: 80%; */
  height: 144rpx;
  width: 462rpx;
}

.trys .card-img {
  display: inline-block;
  width: 144rpx;
  height: 144rpx;
  border-radius: 8rpx;
  vertical-align: middle;
}

.trys .recipeName {
  height: 80rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: -0.78rpx;
  font-weight: 500;
}

.trys .title-text-overflow{
  width: 100%;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap:break-word;
}

.trys .sort {
  margin-top: 8px;
  line-height: 12px;
  font-size: 12px;
  color: #8a8a8f;
  letter-spacing: 0;
}

.trys .card-detail {
  height: 26px;
  display: flex;
  align-items: center;
}

.trys .card-detail > text {
  font-size: 10px;
  color: #8a8a8f;
  letter-spacing: 0;
  line-height: 1.4;
}

.trys .card-detail > text::after {
  content: '|';
  margin: 0px 3px;
}

.trys .card-detail > text:last-child::after {
  content: '';
}

.rice-two-box{
  height: 52rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.rice-left-rice{
  max-width: 390rpx;
  margin-top: 12rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.normal-prices{
  color: #FE9500;
  height: 40rpx;
}

.otherColor{
  color: #C7C7CC;
}

.pro-prices{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.33px;
  font-weight: 400;
  margin-left: 14rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: relative;
}
.lineOnly {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 100%;
  height: 1rpx;
  background: #999999;
}
.pro-prices text{
  display: inline-block;
  vertical-align: top;
}
.moneyIcon{
  line-height: 50rpx;
  font-size: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.pro-price{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.33px;
  font-weight: 400;
  line-height: 40rpx;
}
.moneyNum{
  display: inline-block;
  vertical-align: top;
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
