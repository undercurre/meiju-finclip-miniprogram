<view class="main-container">
  <mx-cell-group inset>
    <mx-cell class="cell-image-cell" size="large" center imageSize="32" is-link title="头像">
      <view>
        <mx-image
          round
          fit="cover"
          plate="meiju"
          custom-class="avatar"
          src="{{ headImgUrl }}"
          bindtap="editHeadImg"
        ></mx-image>
      </view>
    </mx-cell>
    <mx-cell
      bindtap="editNickName"
      center
      imageSize="32"
      title="昵称"
      is-link
      border="{{ false }}"
      value="{{ nickName }}"
    />
  </mx-cell-group>
  <mx-dialog
    z-index="10001"
    use-slot
    title="昵称"
    show="{{ dialogShow }}"
    show-cancel-button
    bind:cancel="cancleEdit"
    confirmButtonText="保存"
    auto-close="{{false}}"
    scale="1"
    bind:confirm="confirmEdit"
  >
    <view class="dialog-input">
      <view class="field-container">
        <mx-field
          custom-style="padding: 3px 8px; background: #f9f9f9;border: 1px solid #eeeeee;"
          value="{{ fieldValue }}"
          maxlength="{{15}}"
          type="text"
          clearable
          placeholder="请输入昵称"
          border="{{ false }}"
          adjust-position="{{ false }}"
          error-message="{{errorMessage}}"
          error-color="#FF8225"
          bind:change="onChange"
          bind:input="onInput"
          input-class="input-class"
        ></mx-field>
      </view>
    </view>
  </mx-dialog>
</view>
