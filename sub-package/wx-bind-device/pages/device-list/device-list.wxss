/* sub-package/bind-device/pages/device-list/device-list.wxss */
page {
  background-color: #f9f9f9;
}
.no-list-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
  margin-top: 20rpx;
}
.no-list-img image {
  display: block;
  margin: 0 auto;
}
.header {
  width: 686rpx;
  margin: 24rpx auto;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8a8a8f;
  line-height: 32rpx;
  font-weight: 400;
}
.main {
  background: #fff;
}
.main-item {
  display: flex;
  justify-content: start;
  align-items: center;
  height: 160rpx;
  box-sizing: border-box;
  padding-left: 32rpx;
  /* padding: 0 32rpx; */
  /* padding: 0 40rpx; */
}
.main-icon {
  /* margin:40rpx 0; */
  width: 128rpx;
}
.main-icon .main-icon-image {
  width: 96rpx;
  height: 96rpx;
  background: #f8f8f8;
  border-radius: 50%;
}
.main-item-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* padding:40rpx 0; */
  border-bottom: 2rpx solid #f2f2f2;
  width: 622rpx;
  height: 160rpx;
  padding-right: 32rpx;
}
.main-item:nth-last-child(1) .main-item-content {
  border-bottom: none;
}
.main-item-arrow {
  width: 20rpx;
  height: 20rpx;
}
.status-bind {
  color: #267aff;
}
.status-unbind {
  color: #333;
}
.main-item-content-desc {
  width: 350rpx;
}
.main-item-content-status {
  width: 200rpx;
  text-align: right;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.main-item-content-desc-title {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
}
.main-item-content-desc-location {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8a8a8f;
  font-weight: 400;
}
