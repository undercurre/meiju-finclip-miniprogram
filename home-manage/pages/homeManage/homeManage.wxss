/* pages/homeManage/homeManage.wxss */
page {
  background-color: #f9f9f9;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
  --iphonex-fix-bottom: env(safe-area-inset-bottom);
}
.content {
  padding-bottom: calc(195rpx + var(--iphonex-fix-bottom));
}
.contentPadding {
  padding-bottom: 94rpx;
}
.homeListWarp {
  position: relative;
  /* width: 100%;
  height: 192rpx; */
  border-radius: 32rpx;
  background: #fff;
  margin: 20rpx 32rpx;
  padding: 36rpx 32rpx;
  box-sizing: border-box;
}
.homeListWarp>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title {
  display: flex;
  align-items: center;
  line-height: 1;
}

.homeName {
  font-size: 32rpx;
  font-family: 'PingFang SC';
  font-weight: 500;
  color: #333;
  line-height: 1.3;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
}
.homeNameEllipsis {
  max-width: 448rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.myHome {
  font-family: 'PingFangSC';
  font-size: 24rpx;
  display: block;
  color: #999999;
  height: 32rpx;
  line-height: 32rpx;
}

.numList {
  font-size: 24rpx;
  font-family: 'PingFang SC';
  color: #666666;
  display: flex;
  margin-top: 32rpx;
  align-items: center;
}

.itemWarp {
  display: flex;
  align-items: center;
  justify-content: center;
  /* width: 164rpx; */
  position: relative;
  height: 24rpx;
  padding-left: 12px;
  padding-right: 12px;
}

.itemWarp::after {
  position: absolute;
  right: 0;
  top: 0;
  content: '';
  width: 1px;
  height: 200%;
  border-right: 1px solid #e4e4e4;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.itemWarp:first-child{
  padding-left: 0;
}
.itemWarp:nth-child(3)::after {
  position: absolute;
  right: 0;
  top: 0;
  content: '';
  width: 0;
  height: 0;
}

.Ico {
  width: 24rpx;
  height: 24rpx;
  /* margin-right: 6rpx; */
}

.centerDes {
  margin: 0 6rpx 0 12rpx;
}

.inviteButton {
  position: absolute;
  bottom: 52rpx;
  right: 32rpx;
  /* width: 96rpx; */
  height: 52rpx;
  background: #267AFF;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 32rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC';
  font-weight: 500;
  overflow: visible;
}

.inviteButton::after {
  border: 0;
} 
.btn-container{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 32rpx calc(var(--iphonex-fix-bottom));
  background-color: #fff;
  z-index: 1;
  height: 128rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #267AFF;
  line-height: 32rpx;
  font-weight: 500;
}
.createBtn{
  color: #fff;
  background-color: #E61E1E;
  border-radius: 200rpx;
  font-size: 32rpx;
  font-weight: 500;
}
.inviteText {
  display: inline-block;
  vertical-align: top;
  width: 100%;
  font-family: 'PingFang SC';
  font-size: 24rpx;
  color: #fff;
  line-height: 48rpx;
  white-space: nowrap;
  font-weight: 500;
}

.redDot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff1d1d;
  position: absolute;
  right: 0;
  top: 0;
}

.bottomDesFixed {
  color: #999999;
  font-size: 24rpx;
  font-family: 'PingFang SC';
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 66rpx;
  left: 0;
}

.bottomDesFixed span,
.bottomDesUnFixed span {
  color: #267aff;
}

.bottomDesUnFixed {
  color: #999999;
  font-size: 24rpx;
  font-family: 'PingFang SC';
  text-align: center;
  width: 100%;
  margin-top: 24rpx;
  padding-bottom: 94rpx;
}
.dialog-input{
  padding:32rpx 30rpx 20rpx;
}
.input-class{
  font-size: 24rpx;
}
.field-container{
  padding-bottom: 12rpx;
}
.tips-container{
  line-height: 1;
}
.tips{
  font-size: 20rpx;
  line-height: 20rpx;
  color: #FF8225;
}

.home-list-title{
  margin-left: 32rpx;
  margin-top: 48rpx;
  font-size: 28rx;
  color: #666666;
  letter-spacing: -0.5px;
  line-height: 28rpx;
  font-weight: 400;
  margin-bottom: 4rpx;
}
.custom-plus-class{
  display: inline-block;
  margin-right: 8rpx;
}
.custom-icon-class{
  margin-left: 8rpx;
}
.home-manage-container{
  width: 100%;
  overflow: hidden;
}
.click-create-btn{
  display: flex;
}