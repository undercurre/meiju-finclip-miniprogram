<swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="3000">
    <block wx:for="{{errorMsgList}}">
        <swiper-item>
            <view class="swiper_item">
                <view wx:if="{{item.type == 1}}" class="tip-bar grey">
                    <image class="icon" src="{{errorImgUrl2}}"></image>
                    <view class="content">
                        {{item.title}}
                    </view>
                    <image class="close" src="{{closeImgUrl2}}" data-index="{{index}}" bindtap="closeItem"></image>
                </view>
                <view wx:else class="tip-bar red">
                    <image class="icon" src="{{errorImgUrl1}}"></image>
                    <view class="content">
                        {{item.title}}
                    </view>
                    <image class="close" src="{{closeImgUrl1}}" data-index="{{index}}" bindtap="closeItem"></image>
                </view>
            </view>
        </swiper-item>
    </block>
</swiper>