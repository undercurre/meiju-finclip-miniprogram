<view class="{{show ? 'weui-show' :'weui-hidden'}}">
  <view class="weui-mask init" wx:if="{{mask}}" bindtap="close" data-type="tap"></view>
  <view class="weui-half-screen-dialog {{extClass}}">
    <view class="weui-half-screen-dialog__hd">
      <view wx:if="{{closabled}}" class="weui-half-screen-dialog__hd__side" bindtap="close" data-type="close">
        <view class="weui-icon-btn weui-icon-btn_close">关闭</view>
      </view>
      <view class="weui-half-screen-dialog__hd__main">
        <block wx:if="{{title}}">
          <text class="weui-half-screen-dialog__title">{{title}}</text>
          <text class="weui-half-screen-dialog__subtitle">{{subTitle}}</text>
        </block>
        <block wx:else>
          <view class="weui-half-screen-dialog__title">
            <slot name="title"></slot>
          </view>
        </block>
      </view>
    </view>
    <view class="weui-half-screen-dialog__bd">
      <block wx:if="{{title}}">
        <view class="weui-half-screen-dialog__desc">{{desc}}</view>
        <view class="weui-half-screen-dialog__tips">{{tips}}</view>
      </block>
      <slot name="desc" wx:else></slot>
      <view class="panel-content" wx:if="{{panelType=='fan'}}">
        <view class="panel-item-title">
          <view class="name">吸力</view>
          <view class="tag">{{suctionTag}}</view>
        </view>
        <view class="panel-item-type">
          <view class="panel-item" wx:for="{{suctionBtnList}}" wx:key="{{item.index}}" data-index="{{index}}" bindtap="toggelSuction" data-value="{{item.value}}">
            <image wx:if="{{item.value==suctionLevel}}" src="{{item.selectedImgUrl}}" class="trigger-item-icon"></image>
            <image wx:else src="{{item.imgUrl}}" class="trigger-item-icon"></image>
          </view>
        </view>
      </view>
      <view class="panel-content" wx:if="{{panelType=='water'}}">
        <view class="panel-item-title">
          <view class="name">水速</view>
          <view class="tag">{{waterTag}}</view>
        </view>
        <view class="panel-item-type">
          <view class="panel-item" wx:for="{{waterBtnList}}" wx:key="{{item.index}}" data-index="{{index}}" bindtap="toggelWater" data-value="{{item.value}}">
            <image wx:if="{{item.value==waterLevel}}" src="{{item.selectedImgUrl}}" class="trigger-item-icon"></image>
            <image wx:else src="{{item.imgUrl}}" class="trigger-item-icon"></image>
          </view>
        </view>
      </view>
      <view class="panel-content" wx:if="{{panelType=='mode'}}">
        <view class="panel-item-title">
          <view class="name">模式</view>
          <view class="tag">{{modeTag}}</view>
        </view>
        <view class="subtitle">{{modeTagInfo}}</view>
        <view class="panel-item-type">
          <view wx:for="{{cleanModeBtnList}}" class="panel-item {{item.status}}" wx:key="{{item.index}}" data-index="{{index}}" bindtap="toggelMode" data-value="{{item.value}}" data-status="{{item.status}}">
            <image wx:if="{{item.value==modeType}}" src="{{item.selectedImgUrl}}" class="trigger-item-icon"></image>
            <image wx:else src="{{item.imgUrl}}" class="trigger-item-icon"></image>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-half-screen-dialog__ft">
      <block wx:if="{{buttons && buttons.length}}">
        <button wx:for="{{buttons}}" wx:key="{{item.text + item.index}}" type="{{item.type}}" class="weui-btn {{item.className}}" data-index="{{index}}" bindtap="buttonTap">
          {{item.text}}
        </button>
        <!-- <view wx:for="{{buttons}}" class="weui-dialog__btn {{}} {{item.extClass}}" ></view> -->
      </block>
      <slot name="footer" wx:else></slot>
    </view>
  </view>
</view>