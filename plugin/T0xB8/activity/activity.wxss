.container {
  text-align: center;
  background-color: #F4F9FF;
  height: 100vh;
}

.cleanTextBox {
  width: 80vw;
  margin: auto;
  flex-direction: column;
  align-items: center;
}

.noActivityImg {
  width: 80vw;
}

.cleanText {
  font-family: PingFangSC-Regular;
  color: #8A8A8F;
  letter-spacing: 0;
  margin-top: 50px;
}

.infoBox {
  width: 90vw;
  /* border-radius: 24px; */
  margin: auto;
  border: 15px;
  margin-top: 2vh;
  box-shadow: 0px 1px 15px 2px rgba(0, 0, 0, 0.05);
}

.infoBoxTop {
  flex-direction: row;
  align-items: center;
  height: 112px;
  width: 688px;
}

.infoIcon {
  width: 90vw;
  height: 21vh;
  border-radius:15px;
  margin: auto;
  margin-top: 2vh;
  box-shadow: 0px 0px 10px 4px rgba(0, 0, 0, 0.1);
}

.infoBoxTitle {
  margin-left: 14px;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 32px;
  color: #000000;
}

.infoBoxTime {
  margin-left: 216px;
  font-family: PingFang-SC-Regular;
  font-size: 28px;
  color: #666666;
}

.infoBoxUnder {
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 688px;
  height: 186px;
}

.infoBoxText {
  font-family: PingFangSC-Regular;
  font-size: 32px;
  color: #000000;
  margin-left: 32px;
  width: 600px;
}

.rightIcon {
  height: 16px;
  width: 8px;
  margin-right: 40px;
}

.infoLine {
  width: 628px;
  margin-left: 32px;
  height: 1px;
  background-color: #E5E5E8;
}

.infoImage {
  position: absolute;
  top: 0;
  left: 0;
  width: 688px;
  height: 186px;
}