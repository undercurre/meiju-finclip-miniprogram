.appointment-container {
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  background-color: #f3f3f3;
  padding-top: 20rpx;
}

.order-button {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 18px;
  font-weight: 500;
  width: 700rpx;
  height: 80rpx;
  border-radius: 60rpx;
  background-color: blue;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #26C2FF;
  position: relative;
  top: 10rpx;
}

.butotn-value {
  width: 32px;
  height: 18px;
  font-size: 16px;
  color: #FFFFFF;
}

.bottom-container{
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 100rpx;
}
