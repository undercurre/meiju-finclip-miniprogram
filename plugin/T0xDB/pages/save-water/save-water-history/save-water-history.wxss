/* plugin/T0xDB/pages/save-water/save-water-history/save-water-history.wxss */
page {
  width: 100vw;
  height: 100vh;
}
.wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}
.list-wrapper {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  padding-bottom: 30rpx;
}

.empty-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-image {
  width: 110rpx;
  height: 162rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #9a9a9e;
  margin-top: 30rpx;
}

.exchange-item {
  display: flex;
  margin: 10rpx 32rpx;
  border-radius: 24rpx;
  border: 2rpx dashed #29c3ff;
  background-color: #ffffff;
  padding: 16rpx 0 16rpx 32rpx;
}
.exchange-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.product-name {
  font-size: 32rpx;
  color: #2e2e2e;
  font-weight: 500;
}
.exchange-time {
  font-size: 24rpx;
  color: #9a9a9e;
  margin-top: 10rpx;
}
.exchange-right {
  width: 228rpx;
  display: flex;
  flex-direction: column;
  border-left: 2rpx dashed #29c3ff;
  justify-content: center;
  align-items: center;
  padding: 16rpx 0;
}
.coupon-name {
  font-size: 28rpx;
  color: #2e2e2e;
}
.drip-wrapper {
  display: flex;
}
.drip-count {
  color: #29c3ff;
  font-size: 20rpx;
}
.drip-unit {
  font-size: 20rpx;
  color: #9a9a9e;
}
.use-btn {
  color: #29c3ff;
  font-size: 20rpx;
  border: 2rpx solid #29c3ff;
  background-color: #f5fcff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
}
