@import "../assets/css/public.wxss";
.app-wrapper {
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: calc(100vh - 128rpx);
  justify-content: space-between;
}
.colmo-wrapper {
  background-color: #000000;
}
.colmo-color {
  color: #ffffff;
}
.appoint-list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}
.no-appoint-text1 {
  width: 750rpx;
  text-align: center;
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 200rpx;
}
.no-appoint-text2 {
  width: 650rpx;
  margin-left: 50rpx;
  text-align: center;
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.no-appoint-text3 {
  width: 650rpx;
  margin-left: 50rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
}
.tip-text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  line-height: 32rpx;
  opacity: 0.4;
  margin: 20rpx;
  text-align: center;
}

.add-button {
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background-color: #ffffff;
}
.add-button:active {
  background-color: #f5f5f5;
}
.add-button-colmo {
  background-color: #1a1a1a;
}
.add-button-colmo:active {
  background-color: #2a2a2a;
}
.add-text {
  height: 128rpx;
  line-height: 128rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFAA10;
}
.add-text-colmo {
  color: #c26033;
}

.main-container {
  flex: 1;
  flex-direction: row;
  align-items: center;
  margin-left: 32rpx;
}
.cell-top-border {
  border-top-color: #f2f2f2;
  border-top-width: 1rpx;
}
.cell-top-border-colmo {
  border-top-color: #424546;
  border-top-width: 1rpx;
}
.middle {
  flex: 1;
  min-height: 160rpx;
  padding-top: 32rpx;
}
.right {
  flex-direction: row;
  align-items: center;
  padding-right: 32rpx;
  padding-left: 32rpx;
}

.week-time-lay {
  height: 44rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  align-items: center;
}
.week-time {
  color: #000000;
  font-family: 'PingFangSC-Regular';
  font-size: 32rpx;
  margin-right: 20rpx;
}
.week-time-colmo {
  color: #ffffff;
}
.week-mode {
  color: #fff;
  width: 64rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  background-color: #FFAA10;
  text-align: center;
  height: 44rpx;
  line-height: 44rpx;
  margin-right: 20rpx;
}
.week-mode-colmo {
  background-color: #c26033;
}
.week-day {
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  color: #8a8a8f;
  margin-top: 20rpx;
}

.cell-switch {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.delete-btn {
  width: 160rpx;
  height: 160rpx;
  background: #ee0a24;
  text-align: center;
  line-height: 130rpx;
}

.delete-btn-text {
  color: #ffffff;
}