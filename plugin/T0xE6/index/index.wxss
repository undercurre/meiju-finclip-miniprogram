/* lottie UI */
.lottie-wrap {
  position: relative;
}
.lottie-wrap .offline-bg-img {
  width: 600rpx;
  height: 600rpx;
  margin: 80rpx auto;
  display: block;
  transform: translateY(-20px);
}
.lottie-wrap .running-bg-img {
  width: 600rpx;
  height: 600rpx;
  margin: 80rpx auto;
  display: block;
  /* transform: translateY(10px); */
}
.lottie-wrap .heating-bg-img {
  width: 550rpx;
  height: 600rpx;
  display: block;
  margin: 80rpx auto;
  transform: translateY(-10px);
  /* transform: translateY(-115rpx); */
}
.lottie-wrap .content-wrap {
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
  top: 150rpx;
}
.lottie-wrap .online-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.lottie-wrap .gray {
  line-height: 64rpx;
  font-family: PingFangSC-Regular;
  color: #666666;
  font-size: 24rpx;
}
.lottie-wrap .tem-wrap {
  position: relative;
  width: 300rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  margin-top: -40rpx;
}
.lottie-wrap .tem {
  font-size: 144rpx;
  text-align: center;
}
.lottie-wrap .tem-half {
  font-size: 110rpx;
  text-align: center;
}
.lottie-wrap .degree {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  position: absolute;
  right: 12rpx;
  top: 24rpx;
}
.lottie-wrap .status-wrap {
  width: 280rpx;
  margin-left: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.lottie-wrap .center-wrapper {
  margin-top: -24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.lottie-wrap .status-title {
  font-size: 24rpx;
  color: #666;
}
.lottie-wrap .status-value {
  font-size: 32rpx;
  color: #666666;
}
.lottie-wrap .status-line {
  width: 1rpx;
  height: 50rpx;
  background-color: #e5e5e8;
  margin: 0px 25rpx;
}
.lottie-wrap .status-off-box {
  margin-top: 85rpx;
  text-align: center;
}
.lottie-wrap .status-off-box > text {
  font-size: 80rpx;
  color: #000000;
}

.status-off-box .error-img {
  width: 96rpx;
  height: 96rpx;
  display: block;
  margin: -50rpx auto 30rpx;
}

.status-off-box .error-text {
  font-size: 36rpx !important;
  color: #000 !important;
}

/* cell list */
.cell-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* border: 1rpx solid red; */
}
.cell-list .cell-group {
  width: 686rpx !important;
  border-radius: 16rpx;
  margin-top: 16rpx;
}
.cell-list .power-cell {
  box-shadow: 0rpx -2rpx 15rpx -5rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  width: 686rpx !important;
  height: 160rpx;
  border-radius: 16rpx;
}
.cell-list .title-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
  /* flex-wrap: wrap; */
}
.cell-list .power-cell-right-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.cell-list .cell {
  display: flex;
  align-items: center;
  width: 686rpx !important;
  height: 144rpx;
  border-radius: 16rpx;
}
.cell-list .cell-value {
  font-size: 32rpx;
  color: #666666;
  line-height: 1;
  flex: none;
}
.cell-list .cell-value-temp {
  font-size: 32rpx;
  color: #000000;
  line-height: 1;
  flex: none;
}
.cell-list .cell-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.cell-icon.p {
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  font-size: 40rpx;
}

/* mode-list */
.mode-list {
  max-height: 60vh;
  display: block;
  margin: 0 auto;
  padding: 0 calc((100vw - 686rpx) / 2);
  box-sizing: border-box;
}
.mode-title {
  text-align: center;
  font-size: 28rpx;
  color: #8a8a8f;
  margin: 30rpx 0;
}
.mode-list .cell {
  border-radius: 16rpx;
  background-color: #f6f6f6;
  margin: 0 auto 30rpx;
}
.mode-list .title-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
  /* flex-wrap: wrap; */
}
/* .mode-list .cell.active */
.mode-list .active-cell {
  background-color: #eaeaec;
}
.mode-list .cell-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.mode-cancel {
  font-size: 32rpx;
  color: #666666;
  line-height: 110rpx;
  text-align: center;
  margin-bottom: 15rpx;
}

.meiju-app-download {
  text-align: center;
  font-size: 26rpx;
  color: #267aff;
  margin: 70rpx 0;
}

.tabs-header {
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background-color: #f9f9f9;
}

.tab-item {
  font-size: 28rpx;
  color: #000000;
  margin: 0 60rpx;
  font-weight: 400;
}

.tab-item.active {
  font-family: PingFangSC-Regular;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-item.active::after {
  content: '';
  display: inline-block;
  height: 6rpx;
  width: 40rpx;
  background-color: #000;
  font-weight: 500;
  border-radius: 3rpx;
  margin-top: 12rpx;
}

.openMeiJuApp {
  width: 100%;
  position: fixed;
  bottom: 0;
  font-size: 26rpx;
  color: #267AFF;
  
}