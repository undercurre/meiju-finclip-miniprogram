@import '../assets/css/common.wxss';
.container {
  /*padding-bottom: 30rpx;*/
  position: relative;
  box-sizing: border-box;
  /*padding: 0 32rpx;*/
}
.theme-color {
  background-color: #ffaa10;
}
/*禁用样式*/
.disabled-color {
  background-color: #7c879b !important;
}
.disabled {
  opacity: 0.4;
}
.controller-wrapper-disabled {
  opacity: 0.8;
}

.openMeiJuAPpp {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 0;
  font-weight: 400;
  margin-top: 80rpx;
  margin-bottom: 140rpx;
  text-align: center;
  white-space: nowrap;
  word-break: keep-all;
}
.openMeiJuAPpp .link {
  color: #267aff;
}
.openMeiJuAPpp .icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.bottom-fixed {
  margin: 0;
  padding-bottom: 0;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 140rpx;
}

/*设备头图*/
.device-image-wrapper {
  position: relative;
}
.device-online-status-wrapper {
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 0 13rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 2rem;
  padding: 16rpx 32rpx;
}
.device-online-status-wrapper .dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #25cf42;
  margin-right: 15rpx;
}
.device-online-status-wrapper .label {
  font-size: 32rpx;
  line-height: 32rpx;
}
.device-online-status-wrapper .dot.offline {
  background-color: #7c879b;
}
.device-online-status-wrapper .label.offline {
  color: #7c879b;
}
.device-image {
  width: 100%;
  margin-top: -20%;
}

/*灶头卡片区域*/
.stove-card-wrapper {
  margin-top: 32rpx;
  padding: 0 32rpx;
}

/*一键关机区域*/
.footer-box {
  height: 168rpx;
}
.footer-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 168rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
  z-index: 99;
}
.footer-wrapper .btn-power .icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  margin: 0 auto;
}
.footer-wrapper .btn-power .icon-wrapper .icon {
  width: 50%;
  height: 50%;
}
.footer-wrapper .btn-power .label {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 24rpx;
}
