/* plugin/T0xB9/component/midea-stove-middle-setting/midea-stove-middle-setting.wxss */
@import '../../assets/css/common.wxss';

.component-wrapper {
  /*padding: 0 30rpx;*/
}
.theme-color {
  background-color: #ffaa10 !important;
}

/*标题*/
.title-wrapper {
  text-align: center;
  padding-top: 50rpx;
  padding-bottom: 36rpx;
}
.title-wrapper .title {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 44rpx;
}

/*灶头信息*/
.stove-card-info-wrapper {
  padding: 30rpx;
  margin: 0 30rpx;
}
.stove-card-info-wrapper .title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 45rpx;
  text-stroke: 1px #979797;
  margin-right: 16rpx;
}
.stove-card-info-wrapper .desc {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}

/*功能选项*/
.options-wrapper {
  border-top: 1px solid #c7c7cc;
  border-bottom: 1px solid #c7c7cc;
  padding: 30rpx;
  margin: 0 30rpx;
}
.options-item {
  flex: 1;
}
.options-item .icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  background-color: #fff3de;
  border-radius: 100%;
  margin-right: 15rpx;
}
.options-item .icon-wrapper .icon {
  width: 90%;
  height: 90%;
}
.options-item .label {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 37rpx;
}
.options-setting-wrapper {
  position: relative;
  background-color: #f2f2f2;
  border-radius: 2rem;
  /*padding: 12rpx 0;*/
  margin-top: 35rpx;
}
.options-setting-wrapper .options-setting-active {
  position: absolute;
  top: 0;
  left: 0;
  width: 33%;
  height: 100%;
  border-radius: 2rem;
  background-color: #ffaa10;
  z-index: 0;
}
.options-setting-item {
  width: 33%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 70rpx;
  z-index: 1;
  text-align: center;
}
.options-setting-item.active {
  color: #ffffff;
}

/*烹饪时间*/
.work-time-wrapper {
  padding: 30rpx 0;
  margin: 0 60rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 32rpx;
}
.work-time-wrapper .value {
  color: #666666;
}
.work-time-wrapper .icon {
  width: 24rpx;
  height: 24rpx;
}

/*底部按钮*/
.button-wrapper {
  border-top: 14rpx solid #f2f2f2;
}
.button-item {
  padding: 30rpx;
  flex: 1;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  box-sizing: border-box;
}
.button-item:first-child {
  border-right: 1rpx solid #f2f2f2;
}

/*烹饪时间弹框*/
.modal-wrapper {
  border-top-left-radius: 1rem;
  border-top-right-radius: 1rem;
  background: #fff;
  padding-top: 40rpx;
}
.modal-wrapper .header {
  /*padding: 0 30rpx;*/
  position: relative;
}
.modal-wrapper .header .center {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}
.modal-wrapper .button-wrapper {
  border-top: 15rpx solid #eee;
}
.modal-wrapper .button-wrapper .button {
  border: none;
  border-radius: unset;
  padding: 25rpx 0;
  font-size: 34rpx;
  border-right: 2rpx solid #eee;
  flex: 1;
  text-align: center;
  color: #000;
}
.modal-wrapper .button-wrapper .button:last-child {
  border-right: unset;
}
