/* plugin/T0xB9/component/midea-slider-bold/midea-slider-bold.wxss */
@import '../../assets/css/common.wxss';

.component-wrapper {
  position: relative;
  /*padding-bottom: 40rpx;*/
  overflow: visible;
}

.slider-wrapper {
  width: 345px;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
  height: 2rem;
  border-radius: 2rem;
  background-color: #f2f2f2;
}

.slider-process-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 2rem;
  width: calc(50% + 1rem);
  height: 100%;
  background-color: #ffaa10;
  z-index: 1;
}
.other-slider-process,
.slider-process-limit-wrapper.other-slide {
  left: unset;
  right: 0;
}

.slider-anchor {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2rem;
  height: 2rem;
  border: 4rpx solid #fff;
  border-radius: 100%;
  box-sizing: border-box;
  z-index: 2;
}
.other-anchor {
  left: unset;
  right: 0;
  transform: translateX(50%);
}

.slider-anchor .label {
  color: #ffffff;
  font-size: 28rpx;
  line-height: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}

.slider-process-limit-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 2rem;
  width: calc(50% + 1rem);
  height: 100%;
  border: 2rpx dashed #ffaa10;
  box-sizing: border-box;
  z-index: 0;
}

.value-array-wrapper {
  width: 100%;
  position: relative;
  /*bottom: 0;*/
  left: 50%;
  transform: translateX(-50%);
}
.value-item {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8a8a8f;
  /*line-height: 24rpx;*/
}
