@import "../../assets/css/public.wxss";
.cell-group {
  width: 686rpx !important;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.top-cell {
  display: flex;
  align-items: center;
  width: 686rpx !important;
  height: 144rpx;
  margin-top: 0;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.bottom-cell {
  display: flex;
  align-items: center;
  width: 686rpx !important;
  height: 144rpx;
  margin-top: 0;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.cell {
  display: flex;
  align-items: center;
  width: 750rpx !important;
  height: 144rpx;
}

.cell-value {
  font-size: 32rpx;
  color: #666666;
}
.cell-title {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
}
.cell-img-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 32rpx;
}

.cell-img-wrap .cell-img {
  width: 64rpx;
  height: 64rpx;
}

.delete-btn {
  width: 160rpx;
  height: 144rpx;
  background: #ee0a24;
}

.delete-btn-text {
  color: #ffffff;
}

.add-button {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background-color: #ffffff;
  z-index: 99;
}
.add-button:active {
  background-color: #f5f5f5;
}
.add-button-colmo {
  background-color: #1a1a1a;
}
.add-button-colmo:active {
  background-color: #2a2a2a;
}
.add-text {
  display: block;
  height: 128rpx;
  line-height: 128rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ffaa10;
}
