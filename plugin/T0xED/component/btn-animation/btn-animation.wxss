.layout {
  width: 140rpx;
  height: 64rpx;
  position: absolute;
  top: 0rpx;
  left: -140rpx;
  transition-property: left;
  transition-timing-function: ease-in;
  background-image: linear-gradient(
    to right,
    rgba(255, 255, 255, 0),
    rgba(255, 255, 255, 0.5)
  );
}
.left-animate {
  left: 320rpx;
}
.duration0 {
  transition-duration: 0s;
}
.duration1 {
  transition-duration: 1.4s;
}
