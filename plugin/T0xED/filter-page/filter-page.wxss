@import "../assets/css/public.wxss";
page {
  background: #ffffff
}
.filter-container{
  width: 750rpx;
  height: 540rpx;
}
.filter-layout{
  border: 2rpx solid #C7C7CC;
  justify-content: space-around;
  align-items: center;
}
.circle-layout{
  padding:6rpx;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-detail{
  width: 232rpx;
  height: 120rpx;
}
.content-num{
  justify-content: center;
  align-items: flex-end;
}
.content-line{
  width: 1rpx;
  height: 66rpx;
  background-color: #E5E5E8;
}
.content-num-val{
  font-size: 64rpx;
  line-height: 64rpx;
}
.content-num-unit{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  line-height: 26rpx;
  margin-left: 5rpx;
}
.content-desc{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: rgba(102,102,102,0.6);
  line-height: 24rpx;
  font-weight: 400;
}
.info{
  font-family: PingFangSC-Regular;
  width: 682rpx;
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 48rpx;
  font-weight: 400;
  margin-bottom:296rpx;
}
.btn-layout{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
}
.btn1{
  height: 92rpx;
  line-height: 92rpx;
  margin-bottom: 28rpx;
  border-radius: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 0;
  text-align: center;
  border: 2rpx solid #29C3FF;
  width: 550rpx;
  background-color: #29C3FF;
  color: #ffffff;
}
.btn2{
  height: 92rpx;
  line-height: 92rpx;
  margin-bottom: 28rpx;
  border-radius: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 0;
  text-align: center;
  border: 2rpx solid #29C3FF;
  width: 550rpx;
  background-color: #ffffff;
  color: #29C3FF;
}
