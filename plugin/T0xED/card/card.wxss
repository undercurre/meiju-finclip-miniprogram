  height: 48rpx;
  background: #25c4fb;
  border-radius: 24rpx;
  margin-left: 32rpx;
}

.set-temp-wrap .set-temp-icon-wrap .set-temp-icon {
  width: 48rpx;
  height: 48rpx;
}

.set-temp-wrap .set-temp-text {
  font-size: 32rpx;
  color: #000;
  margin-left: 16rpx;
}

.set-temp-wrap .set-temp-text-wrap {
  width: 108rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 2rpx solid #25c4fb;
  margin-left: 24rpx;
