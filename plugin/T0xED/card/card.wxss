.slider-wrap .slider {
  margin: 44rpx 56rpx 0 56rpx;
}

.slider-wrap .slider-unit {
  font-size: 20rpx;
  color: #8a8a8f;
  margin-left: 72rpx;
}

.slider-wrap .slider-first-unit {
  font-size: 20rpx;
  color: #8a8a8f;
  margin-left: 32rpx;
}

.filter-status {
  width: 686rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 30rpx 0 20rpx 0;
}

.filter-status .filter-status-text {
  font-size: 32rpx;
  color: #333333;
  margin-left: 32rpx;
}

.filter-status .filter-buy-text {
  font-size: 28rpx;
  color: #999999;
  margin-right: 28rpx;
}
.button-center {
  width: 248rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: rgb(41, 195, 255, 0.1);
  color: #05befc;
}
.tips-top {
  color: #aaa;
  font-size: 24rpx;
}
.tips-end {
  color: #05befc;
  font-size: 24rpx;
  padding-top: 82rpx;
  padding-bottom: 34rpx;
}
.ctrl-panel {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 168rpx;
  background-color: #ffffff;
  box-shadow: 0 -1rpx 5rpx 0 rgba(0,0,0,0.05);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.swing {
  margin: 0 auto;
  width: 128rpx;
  height: 128rpx;
  /* animation: move 4s infinite alternate;
  -webkit-animation: move 4s  infinite alternate; */
  transform-origin: bottom;
  -webkit-transform-origin: bottom;
}

@keyframes move {
  0% {
    transform: rotate(0);
  }
  25% {
    transform: rotate(15deg);
  }
  50% {
    transform: rotate(-15deg);
  }
  75% {
    transform: rotate(-15deg);
  }
  100% {
    transform: rotate(0deg);
  }
}
