  border-radius: 32rpx;
  background: #25c4fb;
  margin-right: 32rpx;
}

.cell-img-wrap .cell-img {
  width: 64rpx;
  height: 64rpx;
}

.set-temp-wrap {
  margin-top: 20rpx;
  width: 686rpx;
  height: 220rpx;
  border-radius: 16rpx;
  background: #ffffff;
  padding-top: 32rpx;
}

.set-temp-wrap .set-temp-icon-wrap {
