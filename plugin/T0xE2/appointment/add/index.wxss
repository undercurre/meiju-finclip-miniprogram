@import "../../assets/css/public.wxss";
page {
  background: #f9f9f9;
}

.cell-title {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
}
.cell-value {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8A8A8F;
  font-weight: 400;
}
.add-sub {
  padding-top: 18rpx;
}

.add-sub .cell {
  width: 100%;
  height: 98rpx;
}

.btn {
  width: 686rpx;
  height: 92rpx;
  border-radius: 46rpx;
}

.btn--primary {
  background: #FFAA10;
}

.btn--danger {
  background: #ff3b30;
}

.btn-text {
  font-size: 32rpx;
  color: #ffffff;
}

.dialog .weui-dialog {
  width: 82%;
  transform: translateY(-50%) !important;
}