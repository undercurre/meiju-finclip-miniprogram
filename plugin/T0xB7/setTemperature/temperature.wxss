/* plugin/T0xB7/setTemperature/temperature.wxss */
.tempContainer {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
}
.temp-slider {
  padding: 30rpx 28rpx 0rpx 28rpx;
  width: 694rpx;
}
.temp-slider-message {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.temp-slider-message-text {
  font-size: 32rpx;
  font-weight: bold;
}
.temp-slider-message-temp {
  background-color: #FFBB00;
  border: 1px solid #FFBB00;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #FFFFFF; 
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  height: 32rpx;
}
.temp-slider-message-cancle {
  flex: 1;
  justify-content: flex-end;
  display: flex;
  font-size: 32rpx;
}
.temp-slider-area {
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
  margin-top: 30rpx;
}
.device-list{
  width: 100%;
  height: calc(100% - 72rpx);
  margin: auto;
  box-sizing: border-box;
  margin: auto;
  overflow: scroll;
  z-index: 1;
  padding: 50rpx 28rpx;
  padding-bottom: 140rpx;
}
.device-card {
  position: relative;
  padding: 15rpx 24rpx;
  box-sizing: border-box;
  width: 327rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -1px 5px 0 rgba(0, 0, 0, 0.05);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  float: left;
}
.device-card-select {
  position: relative;
  padding: 15rpx 24rpx;
  box-sizing: border-box;
  width: 327rpx;
  height: 120rpx;
  background: rgba(255, 170, 16, 0.7);
  box-shadow: 0 -1px 5px 0 rgba(0, 0, 0, 0.05);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  float: left;
  color: white;
}
.cardlist-add-device {
  display: flex;
  justify-items: center;
  align-items: center;
  font-weight: bold;
  font-size: 34rpx;
}
.device-card-cook{
  display:flex;
  justify-items: center;
  align-items: center;
  flex-direction: column;
}
.device-card-cook-select {
  display:flex;
  justify-items: center;
  align-items: center;
  flex-direction: column;
}
.device-card-cook-text {
  flex: 1;
  font-size: 28rpx;
}

.device-temp-area {
  width: 100%;
  height: 180rpx;
  background-color: #f9f9f9;
  position: fixed;
  bottom: 0px;
  left:0px;
  right:0px;
  z-index: 99;
}
.device-temp-area-start {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.device-temp-area-start-btn {
  margin: 50rpx;
  width: 100%;
  height: 88rpx;
  background-color: #FFBB00;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:white;
}

.device-temp-area-change {
  flex: 1;
  margin: 50rpx;
  width: 620rpx;
  height: 80rpx;
  background-color: #FFBB00;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:white;
}

.device-temp-area-change-disabled {
  flex: 1;
  margin: 50rpx;
  width: 620rpx;
  height: 80rpx;
  background-color: #b2b2b2;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color:white;
}