/* midea-service/pages/serviceChargeTypes/serviceChargeTypes.wxss */
page {
  background-color: #f9f9f9;
}

.content-empty {
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-img {
  width: 64vw;
  height: 53vw;
}

.empty-desc {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  line-height: 38rpx;
  text-align: center;
  font-weight: 400;
}

.content {
  background-color: #ffffff;
}

.sub-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 104rpx;
  margin-left: 32rpx;
}

.sub-line-align {
  display: flex;
  justify-items: center;
}

.custom-font {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  line-height: 34rpx;
  font-weight: 400;
}

.img-arrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.bot-bor {
  border-bottom: 1rpx solid #F2F2F2;
}

.location {
  height:104rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.showLocation {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100vw - 200rpx);
}

.selectIcon {
  width: 28rpx;
  height: 28rpx;
}

.currentLocation {
  display: flex;
  flex-direction: row;
  max-width: calc(100% - 60rpx);
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #000000;
  margin-left: 32rpx;
  margin-right: 8rpx;
}

.provinceShow {
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cityShow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.retry {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.locationIcon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12.88rpx;
}

.retryLocation {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #666666;
  margin-right: 32rpx;
}