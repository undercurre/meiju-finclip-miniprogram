@import '../../common.wxss';

.container-box {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
  padding-bottom: 120rpx;
}

.wifiTips {
  position: relative;
  padding: 32rpx;
  font-size: 24rpx;
  color: #ff9700;
  background-color: #fff;
}

.wifiTips .title-tips {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8a8a8f;
  line-height: 40rpx;
  font-weight: 400;
}

.content-tips {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  height: 28rpx;
  font-weight: 400;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content-tips text {
  display: inline-block;
}

.content-tips text:nth-child(1) {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #267aff;
  border: 2rpx solid #ffffff;
  margin-right: 16rpx;
}

.mt20 {
  margin-top: 28rpx;
}

.wifiTips .icon-delete2 {
  position: absolute;
  top: 4rpx;
  right: 10rpx;
  width: 24rpx;
  height: 24rpx;
  padding: 20rpx;
  color: #ff9700;
}

.appoint-p-row .min-text {
  min-width: 260rpx;
}

.appoint-p-row .right {
  display: block;
  text-align: right;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}

.appoint-p-row .in-line {
  overflow: hidden;
  padding-left: 20rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.install-icon {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
}

.delete-circle {
  background: url(data:image/png;base64,)
    no-repeat center;
  background-size: 100%;
}

/* 选择工程师 */
.block-service-engineer {
  position: relative;
  margin-top: 10px;
  height: 69px;
  background: url('https://weixin.midea.com/apps/miniprogram-midea-service/appointment/bg-service-engineer.png')
    no-repeat center center;
  background-size: 100% 100%;
}

.block-service-engineer .unselected {
  position: absolute;
  top: 22.5px;
  right: 15px;
  width: 76px;
  height: 24px;
  border: 1px solid #318bf5;
  border-radius: 12px;
  box-sizing: border-box;
  line-height: 24px;
  font-size: 12px;
  text-align: center;
  color: #318bf5;
}

.block-service-engineer .engineer-name-wrp {
  display: flex;
  position: absolute;
  top: 24.5px;
  right: 15px;
  height: 20px;
  background-size: 14px 14px;
  font-size: 14px;
  color: #333333;
}

.block-service-engineer .engineer-name {
  padding-right: 4px;
}

.install-product-list {
  height: 50px;
  line-height: 50px;
  background: #fff;
}

.install-product-item {
  display: flex;
  /* align-items: center; */
  justify-content: flex-end;
}

.install-product-item .install-tips {
  font-family: PingFang-SC-Regular, sans-serif;
  font-size: 12px;
  color: #318bf5;
  letter-spacing: 0;
  text-align: right;
  background: url('data:image/png;base64,')
    right 4px center no-repeat #eaf3fe;
  background-size: 12px 12px;
  border-radius: 4px;
  height: 24px;
  padding: 0 14px 0 7px;
  line-height: 24px;
  align-self: center;
  margin-right: 6px;
  position: relative;
}

.install-product-item .install-tips::after {
  content: '';
  display: block;
  width: 0;
  height: 0;
  position: absolute;
  top: 6px;
  right: -11px;
  height: 0;
  width: 0;
  border-left: 6px solid #eaf3fe;
  border-right: 6px solid transparent;
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
}

.install-product-item-name {
  justify-content: flex-end;
  font-size: 14px;
  text-align: right;
  padding-right: 10rpx;
  color: #666;
}

.install-product-item .delete-circle {
  box-sizing: content-box;
  padding-right: 15px;
  align-self: center;
  width: 15px;
  height: 15px;
  background: url('data:image/png;base64,')
    right 15px center no-repeat;
  background-size: 15px 15px;
}

.install-dialog {
  position: fixed;
  top: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: 9;
  background: rgba(0, 0, 0, 0.6);
}

.install-dialog-content {
  background: #ffffff;
  position: absolute;
  height: 336px;
  width: 88%;
  left: 6%;
  top: 50%;
  border-radius: 10px;
  transform: translateY(-50%);
  /* animation: showInstallDialog .1s ease-out forwards; */
}

@keyframes showInstallDialog {
  from {
    transform: scale(0.1);
  }

  to {
    transform: scale(1);
    transform: translateY(-50%);
  }
}

.install-dialog-title {
  font-family: PingFang-SC-Medium;
  font-size: 18px;
  color: #333333;
  letter-spacing: 0;
  text-align: right;
  line-height: 26px;
  text-align: center;
  padding: 30px 0;
  position: relative;
}

.dialog-close {
  position: absolute;
  right: 22px;
  top: 50%;
  width: 32px;
  height: 32px;
  transform: translateY(-50%);
  background: url('data:image/png;base64,')
    right center no-repeat;
  background-size: 16px 16px;
}

.install-dialog-list {
  padding: 0 20px 30px;
}

.install-dialog-item {
  padding: 15px 0;
  display: flex;
  position: relative;
}

.install-dialog-item::after {
  content: '';
  display: block;
  height: 1px;
  transform: scaleY(0.5);
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #eaeaea;
}

.install-dialog-item-img {
  height: 80px;
  width: 80px;
  border-radius: 4px;
}

.install-dialog-item-img.prudct-pulsator {
  background: url('https://weixin.midea.com/apps/miniprogram-midea-service/products/pulsator-washing-machine.png') 0 0
    no-repeat;
  background-size: 100% 100%;
}

.install-dialog-item-img.pruduct-drum {
  background: url('https://weixin.midea.com/apps/miniprogram-midea-service/products/drum-washing-machine.png') 0 0
    no-repeat;
  background-size: 100% 100%;
}

.install-dialog-item-info {
  flex: 1;
  margin-left: 15px;
  align-self: center;
}

.install-dialog-item-info-type {
  font-family: PingFang-SC-Medium, sans-serif;
  font-size: 16px;
  color: #333333;
  letter-spacing: 0;
  line-height: 24px;
}

.install-dialog-item-info-des {
  font-family: PingFang-SC-Regular, sans-serif;
  font-size: 14px;
  color: #999999;
  letter-spacing: 0;
  line-height: 20px;
  margin-top: 10px;
}

.install-dialog-item-btn {
  align-self: center;
  font-family: PingFang-SC-Regular, sans-serif;
  font-size: 12px;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  line-height: 18px;
  background: #318bf5;
  border-radius: 16px;
  padding: 7px 14px;
}

/* 备注 */
