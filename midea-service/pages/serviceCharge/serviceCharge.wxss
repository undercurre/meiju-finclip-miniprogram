/* midea-service/pages/serviceCharge/serviceCharge.wxss */
page {
  background-color: #f9f9f9;
}

.content-empty {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-img {
  width: 64vw;
  height: 53vw;
}

.empty-desc {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  line-height: 38rpx;
  text-align: center;
  font-weight: 400;
}

.location {
  height:104rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.showLocation {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100vw - 200rpx);
}

.selectIcon {
  width: 28rpx;
  height: 28rpx;
}

.currentLocation {
  display: flex;
  flex-direction: row;
  max-width: calc(100% - 60rpx);
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #000000;
  margin-left: 32rpx;
  margin-right: 8rpx;
}

.provinceShow {
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cityShow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.retry {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.locationIcon {
  width: 26.26rpx;
  height: 26.26rpx;
  margin-right: 12.88rpx;
}

.retryLocation {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #666666;
  margin-right: 32rpx;
}

.main-content {
  display: flex;
  flex-direction: row;
  height: calc(100vh - 104rpx);
}

.left-list {
  width: 182rpx;
  background-color: #f9f9f9;
}

.right-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background-color: #ffffff;
}

.left-item {
  position: relative;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8A8A8F;
  text-align: center;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.left-item.active-tag {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  background-color: #ffffff;
}

.typeTag {
  margin-left:26rpx;
  margin-right:18rpx;
}

.active-line {
  width: 6rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background-color: #000000;
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
}

.right-item {
  padding-left: 32rpx;
  height: 100rpx;
}

.type {
  padding-top: 34rpx;
  padding-bottom: 34rpx;
  padding-left: 32rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.classProject {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  min-height: 100rpx;
  margin-left: 32rpx;
  padding-right: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  border-bottom: 1rpx #F2F2F2 solid;
}

.money {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FD4942;
  max-width: 200rpx;
  display: flex;
  align-items: center;
}

.rightArrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 16rpx;
}

.typeList {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #666666;
  max-width: 276rpx;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
}

.container {
  position: fixed;
  width: 100vw;
  bottom: 0;
  z-index: 888;
  font-size: 30rpx;
  border-radius: 32rpx 32rpx 0 0;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}

.notice {
  height: 104rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx #F2F2F2 solid;
}

.chargeTitle {
  max-width: 526rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.close {
  height: 32rpx;
  width: 32rpx;
  position: absolute;
  right: 0;
}

.closeImg {
  width: 116rpx;
  height: 116rpx;
  position: absolute;
  right: 32rpx;
  display: flex;
  align-items: center;
}

.scrollView {
  max-height: 70vh;
}

.mask {
  background: #000000;
  opacity: 0.4;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 600;
}

.chargeList {
  min-height: 109rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-bottom: 2rpx #F2F2F2 solid;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}

.chargeList:last-child {
  border-bottom: none;
}

.desc {
  display: flex;
  flex-direction: column;
}

.descTitle {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
  max-width: 522rpx;
}

.descSubTitle {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  font-weight: 400;
  max-width: 522rpx;
}

.descMoney {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FD4942;
  letter-spacing: 0;
  font-weight: 500;
  max-width: 160rpx;
}

.noList {
  display: flex;
  flex-direction: column;
}