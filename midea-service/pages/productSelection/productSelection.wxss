.product-select {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.select-input {
  height: 72rpx;
  padding: 24rpx 32rpx;
}
.input-sec {
  position: relative;
  height: 72rpx;
  background: #f6f6f6;
  border-radius: 36rpx;
}
.input-text {
  font-size: 28rpx;
  line-height: 72rpx;
  color: #8a8a8f;
  padding-left: 56rpx;
  font-weight: bold; /* kkk add */
}
.input-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  background: no-repeat no-repeat -314rpx -166rpx;
  background-size: 800rpx auto;
}
.main-content {
  display: flex;
  flex-direction: row;
}
.left-list {
  width: 182rpx;
  padding-left: 12rpx;
  background-color: #f9f9f9;
}
.left-item {
  position: relative;
  font-size: 24rpx;
  color: #8a8a8f;
  height: 92rpx;
  text-align: center;
  line-height: 92rpx;
  font-weight: 500;
}
.left-item.active-tag {
  font-size: 28rpx;
  color: #000000;
  background-color: #ffffff;
}
.active-line {
  width: 6rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background-color: #000000;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.right-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch
}
.right-item {
  padding-left: 38rpx;
}
.right-item:nth-last-child(1) {
  padding-bottom: 40rpx;
}
.prod-name {
  font-size: 24rpx;
  color: #000000;
  padding: 40rpx 0 38rpx 0;
  font-weight: bold; /* kkk add */
}
.prod-list {
  padding-left: 22rpx;
  display: flex;
  flex-wrap: wrap;
}
.prod-item image {
  display: block;
  width: 112rpx;
  height: 112rpx;
  margin-bottom: 12rpx;
}
.prod-item {
  position: relative;
  width: 120rpx;
  word-wrap: break-word;
  font-size: 24rpx;
  color: #000000;
  text-align: center;
  padding-top: 10rpx;
  margin: 0 46rpx 48rpx 0;
}
.prod-item:nth-child(3n) {
  margin-right: 0;
}
.icon-add {
  background: no-repeat no-repeat -108rpx -286rpx;
}
.icon-had-selected {
  background: no-repeat no-repeat -178rpx -286rpx;
}
.icon-del {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  right: -6rpx;
  top: -6rpx;
  background: no-repeat no-repeat -38rpx -286rpx;
  background-size: 800rpx auto;
}
.icon-right-top {
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  right: -8rpx;
  top: 2rpx;
  background-size: 800rpx auto;
}
.own-tips {
  text-align: center;
  font-size: 24rpx;
  color: #c7c6ce;
  padding: 96rpx 0 30rpx 0;
}
.select-section {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  border-top: 2rpx solid #f8f8f8;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #000000;
  padding: 24rpx 0;
}
.select-section.iphonex-size {
  padding-bottom: 62rpx;
}
.select-tip {
  line-height: 58rpx;
}
.select-main {
  position: relative;
  padding: 0 240rpx 0 32rpx;
}
.select-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  right: 32rpx;
  bottom: 0;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 48rpx;
}
.btn-num {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  background-color: #ff3b30;
  border: 4rpx solid #ffffff;
  border-radius: 32rpx;
  font-size: 20rpx;
  color: #ffffff;
}
.not-selected {
  background-color: rgba(38, 122, 255, 0.2);
}
.had-selected {
  background-color: #267aff;
}
.select-list {
  display: flex;
  flex-wrap: wrap;
  max-height: 156rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch
}
.select-item {
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  background-color: #f6f6f6;
  border-radius: 30rpx;
  margin-right: 24rpx;
  margin-top: 30rpx;
}
