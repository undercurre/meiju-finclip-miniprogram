@import '../../common.wxss';

page {
  background-color: #f9f9f9;
}

.order-empty {
  margin-top: 180rpx;
  font-size: 28rpx;
  color: #8a8a8f;
  text-align: center;
}

.order-empty image {
  display: block;
  width: 480rpx;
  height: 400rpx;
  margin: 0 auto 48rpx;
}

.order-main {
  padding: 16rpx 32rpx 80rpx;
}

.order-item {
  position: relative;
  border-radius: 16rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
}

.item-title {
  position: relative;
  height: 72rpx;
  line-height: 72rpx;
  padding-left: 66rpx;
  font-size: 24rpx;
  color: #000000;
  border-bottom: 2rpx solid #f2f2f2;
}

.titie-icon {
  display: block;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.order-status {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.orange {
  color: #ff9500;
}

.grey {
  color: #666666;
}

.item-content {
  padding: 25rpx 24rpx 32rpx;
  display: flex;
  border-bottom: 2rpx solid #f2f2f2;
}

.item-content0 {
  padding: 24rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.block-box {
  /* width:100%; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.time-num-box {
  height: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.content-img {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.content-left {
  display: flex;
  align-items: center;
  border-radius: 8rpx;
}

.content-left.success {
  border: 2rpx solid #e5e5e8;
  padding: 18rpx;
}

.error-img {
  width: 160rpx;
  height: 160rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.content-right {
  margin-left: 32rpx;
  margin-right: 95rpx;
  width: 300rpx;
  /* margin: 40rpx 0 24rpx 32rpx; */
  font-size: 32rpx;
  color: #8a8a8f;
}

.num-right {
  width: 50rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: right;
  font-size: 24rpx;
}

.left-y-m-d {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8a8a8f;
  line-height: 28rpx;
  font-weight: 400;
}
.right-icon-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 28rpx;
}
.r-content {
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  line-height: 28rpx;
  font-weight: 400;
}
.r-row {
  /* display: inline-block; */
  width: 23rpx;
  height: 23rpx;
}
.content-title {
  font-size: 32rpx;
  color: #000000;
  line-height: 32rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular;
}

.item-btn {
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: flex-end;
}

.item-btn view {
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #c7c7cc;
  border-radius: 48rpx;
  font-size: 26rpx;
  color: #000000;
  text-align: center;
  margin-left: 16rpx;
}

.item-btn view.primary-action {
  color: #0078ff;
  border-color: #0078ff;
}

.item-btn view:nth-child(1) {
  margin-left: 0;
}

.had-finish {
  position: absolute;
  right: 30rpx;
  top: 0;
}

.had-finish image {
  display: block;
  width: 120rpx;
  height: 100rpx;
}
