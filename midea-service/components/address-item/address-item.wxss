/* midea-service/components/address-item/address-item.wxss */
.container {
  /* width: 686rpx; */
  background-color: #f9f9f9;
}
.address-items {
  width: 622rpx;
  height: 188rpx;
  background-color: #ffffff;
  /* background-color: #666666; */
  padding: 42rpx 32rpx;
  margin-top: 16rpx;
  border-radius: 24rpx;
}
.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.modifyTab{
  width: 40rpx;
  margin-left: -4rpx;
}
.modify {
  width: 36rpx;
  height: 36rpx;
}

.address {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #000000;
  line-height: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}
.user-info {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  line-height: 24rpx;
  font-weight: 400;
  margin-top: 24rpx;
}
.line {
  width: 686rpx;
  height: 1rpx;
  background-color: #eeeeee;
  /* margin-left: -32rpx; */
  margin-top: 65rpx;
}
.bottom-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 24rpx;
  color: #999999;
  font-size: 24rpx;
}

.defaultIcon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 18rpx;
  vertical-align: text-top;
}

.deleteTab{
  width: auto;
  height: 40rpx;
}
