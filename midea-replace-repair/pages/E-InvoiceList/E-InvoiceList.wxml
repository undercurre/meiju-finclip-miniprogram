<!--midea-replace-repair/pages/E-InvoiceList/E-InvoiceList.wxml-->
<view class="container-wrap">
  <view wx:if="{{invoiceList&&invoiceList.length>0}}">
    <view wx:for="{{invoiceList}}" wx:key="*this" class="info-panel" data-item="{{item}}" bindtap="selectInvoiceItem">
      <view>
        <text class="mute-text" decode="{{true}}">发票号码&emsp;</text>
        <text class="product-info">{{item.invoiceId}}</text>
      </view>
      <view>
        <text class="mute-text" decode="{{true}}">开票项目&emsp;</text>
        <text class="product-info">{{item.sellerTaxerName}}</text>
      </view>
      <view>
        <text class="mute-text" decode="{{true}}">开票时间&emsp;</text>
        <text class="product-info">{{item.invoiceDate}}</text>
      </view>
    </view>
  </view>
  <view wx:if="{{noInvoice}}" class="no-order">
    <image class="no-order-img" src="assets/img/img_empty@2x.png"></image>
    <view class="no-order-describe">暂无发票</view>
  </view>
  <!-- 居中知道了弹框 -->
  <centerDialog
    id="popup"
    title="温馨提示"
    content="365天换新机权益仅针对在2021年1月1日以后购买的设备，此设备购买时间不符合要求"
    btnz_only="我知道了"
    bind:success="makeSure"
    isShowDialog="{{isShowDialog}}"
  >
  </centerDialog>
</view>
