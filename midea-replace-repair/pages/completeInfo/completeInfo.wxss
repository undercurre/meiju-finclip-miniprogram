/* midea-replace-repair/pages/completeInfo/completeInfo.wxss */
.container {
  background-color: #f9f9f9;
  width: 686rpx;
  height: 100vh;
  padding: 32rpx;
  padding-bottom: 200rpx;
}
.replace-repair-card {
  position: relative;
  width: 686rpx;
  height: 340rpx;
  /* background-color: #267aff; */
  overflow: hidden;
}
.replace-card-img {
  width: 100%;
  height: 100%;
}

.explain-tip {
  position: absolute;
  top: 32rpx;
  right: 40rpx;
  width: 148rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 24px;
  font-family: PingFangSC-Regular;
  color: #ffffff;
}

.sub-title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  margin-top: 40rpx;
  /* margin-top: 28rpx; */
  margin-bottom: 24rpx;
  font-weight: 400;
}

.item-list {
  width: 686rpx;
  height: 104rpx;
  line-height: 104rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #ffffff;
  /* background-color: #267aff; */
}
#item-first {
  border-radius: 16rpx 16rpx 0 0;
}
/* .item-list:last-of-type{ */
#item-last {
  border: none;
  border-radius: 0 0 16rpx 16rpx;
}
.item-content {
  padding-left: 24rpx;
  padding-right: 24rpx;
  min-width: 130rpx;
  max-lines: 1;
  line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* word-wrap: break-word; */
  /* word-break: break-all; */
}

.handle-bar {
  display: flex;
  /* width: 686rpx; */
  width: 654rpx;
  height: 160rpx;
  align-items: center;
  border-radius: 16rpx;
  padding-left: 32rpx;
  background-color: #ffffff;
}
.handle-bar-last {
  margin-top: 32rpx;
}

.icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
}
.action-title {
  background-color: #ffffff;
  border-bottom: solid #f2f2f2 1rpx;
}
.action-main-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  letter-spacing: 0.61rpx;
  text-align: center;
  line-height: 96rpx;
  font-weight: 500;
}
.action-sub-title {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 24rpx;
  font-weight: 400;
  padding-bottom: 32rpx;
}

.submit-btn-wrap {
  width: 686rpx;
  height: 92rpx;
  margin-top: 60rpx;
  margin-bottom: 200rpx;
}
.submit-btn {
  display: inline-block;
  width: 100%;
  height: 100%;
  background: #267aff;
  color: #fff;
  text-align: center;
  line-height: 92rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.no-submit {
  opacity: 0.3;
  /* opacity: 1; */
}

.info-panel {
  position: relative; /* 针对 del-icon*/
  display: flex;
  flex-direction: column;
  /* width: 686rpx; */ /*minus paddig*/
  width: 618rpx;
  background-color: #ffffff;
  padding: 34rpx;
}
.mute-text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  /* letter-spacing: -0.78rpx; */
  line-height: 64rpx;
  font-weight: 400;
}

.product-info {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #000000;
  /* letter-spacing: -0.78rpx; */
  line-height: 64rpx;
  font-weight: 500;
}
.product-info-del {
  position: absolute;
  top: 44rpx;
  right: 52rpx;
  width: 44rpx;
  height: 44rpx;
  /* background-color: #DFDFDF; */
  z-index: 999;
}

.evidence-panel {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  justify-content: flex-start;
  flex-wrap: nowrap;
  margin-top: 12rpx;
}
.evidence-item {
  position: relative;
  /* border-radius: 16rpx; */
  /* overflow: hidden; */
}
.lastItem {
  margin-left: 34rpx;
}
.evidence-img {
  width: 206rpx;
  height: 206rpx;
  border-radius: 16rpx;
}
.del-icon {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
}
/* modify actionsheet 背景色 */
.weui-actionsheet {
  background-color: #f9f9f9;
}
