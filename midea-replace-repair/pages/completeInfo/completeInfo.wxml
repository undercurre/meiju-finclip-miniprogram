<!--midea-replace-repair/pages/completeInfo/completeInfo.wxml-->
<view class="container">
  <view class="replace-repair-card">
    <!-- <image class="icon-result" src="{{imgUrl}}icon_error.png"></image> -->
    <image class="replace-card-img" src="./assets/img/card_img_change@2x.png"></image>
    <text class="explain-tip" bindtap="goAbout">规则说明</text>
  </view>
  <view class="sub-title">产品信息</view>
  <view class="item-list" id="item-first">
    <view class="item-content">产品品类</view>
    <view class="item-content">{{productInfo.productBrand}}<text></text>{{productInfo.productType}}</view>
  </view>
  <view class="item-list">
    <view class="item-content">产品型号</view>
    <view class="item-content">{{productInfo.productModel}}</view>
  </view>
  <view class="item-list" id="item-last">
    <text class="item-content" decode="{{true}}">SN码&ensp;&emsp;</text>
    <view class="item-content">{{productInfo.serialNo}}</view>
  </view>
  <view class="sub-title">上传购买凭证</view>
  <view wx:if="{{orderInfo}}" class="info-panel">
    <view>
      <text class="mute-text" decode="{{true}}">订单编号&emsp;</text>
      <text class="product-info">{{orderInfo.orderId}}</text>
      <image class="product-info-del" bindtap="delItem" src="./assets/img/ic_close@2x.png"></image>
    </view>
    <view>
      <text class="mute-text" decode="{{true}}">商家名称&emsp;</text>
      <text class="product-info">{{orderInfo.shopName}}</text>
    </view>
    <view>
      <text class="mute-text" decode="{{true}}">购买时间&emsp;</text>
      <text class="product-info">{{orderInfo.outerCreateTime}}</text>
    </view>
    <view>
      <text class="mute-text" decode="{{true}}">购买金额&emsp;</text>
      <text class="product-info">{{orderInfo.paymentAmount}}</text>
    </view>
  </view>
  <view wx:elif="{{eInvoiceInfo}}" class="info-panel">
    <view>
      <text class="mute-text" decode="{{true}}">发票号码&emsp;</text>
      <text class="product-info">{{eInvoiceInfo.invoiceId}}</text>
      <image class="product-info-del" bindtap="delItem" src="./assets/img/ic_close@2x.png"></image>
    </view>
    <view>
      <text class="mute-text" decode="{{true}}">开票项目&emsp;</text>
      <text class="product-info">{{eInvoiceInfo.sellerTaxerName}}</text>
    </view>
    <view>
      <text class="mute-text" decode="{{true}}">开票时间&emsp;</text>
      <text class="product-info">{{eInvoiceInfo.invoiceDate}}</text>
    </view>
  </view>
  <view wx:elif="{{photoList&&photoList.length>0}}" class="evidence-panel">
    <view
      wx:for="{{photoList}}"
      wx:key="*this"
      data-item="{{item}}"
      data-index="{{index}}"
      class="evidence-item {{index>0?'lastItem':''}}"
    >
      <image class="evidence-img" src="{{item.fileName}}" data-index="{{index}}" bindtap="previewImage"></image>
      <image class="del-icon" src="assets/img/select_ic_cut@2x.png" data-index="{{index}}" bindtap="delEvidenceItemImg">
      </image>
    </view>
  </view>
  <view wx:else>
    <view class="handle-bar" bindtap="loadBuyRecord">
      <image class="icon" src="assets/img/ic_buy@2x.png"></image>
      <text>从购买记录中导入</text>
    </view>
    <view class="handle-bar handle-bar-last" bindtap="loadBuyImage">
      <image class="icon" src="assets/img/ic_paper@2x.png"></image>
      <text>上传发票图片/订单截图</text>
    </view>
  </view>

  <view wx:if="{{orderInfo || eInvoiceInfo || buyTime}}" class="submit-btn-wrap" bindtap="submit">
    <text class="submit-btn">提交</text>
  </view>
  <view wx:else class="submit-btn-wrap">
    <text class="submit-btn no-submit">提交</text>
  </view>

  <mp-actionSheet bindactiontap="itemClick" show="{{showActionsheet}}" actions="{{groups}}">
    <view slot="title" class="action-title">
      <view class="action-main-title">导入购买记录作为凭证</view>
      <view class="action-sub-title">支持在美的美居、美的商城小程序购买的商品</view>
    </view>
  </mp-actionSheet>

  <!-- 居中知道了弹框 -->
  <centerDialog
    id="popup"
    title="确认提交？"
    content="你提交的信息，我们将在售后服务时进行校验。请确保上传的订单/发票与家电信息相对应，实际以售后在线鉴定结果为准"
    showSubmit="{{true}}"
    btnz_only="再看看"
    btnz_submit="提交"
    bind:submit="applyForCard"
    isShowDialog="{{isShowDialog}}"
  >
  </centerDialog>

  <!-- 居中知道了弹框 -->
  <centerDialog
    id="popup"
    title="温馨提示"
    content="{{errorContent}}"
    textAlign="center"
    btnz_only="我知道了"
    bind:success="ok"
    isShowDialog="{{isShowErrorDialog}}"
  >
  </centerDialog>
</view>
