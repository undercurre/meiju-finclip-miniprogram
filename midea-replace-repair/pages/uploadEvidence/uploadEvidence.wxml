<!--midea-replace-repair/pages/uploadLocalImage/uploadLocalImage.wxml-->
<view class="conrainer-wrap">
  <view
    wx:for="{{showPhotoList}}"
    wx:key="index"
    wx:for-index="index"
    wx:for-item="item"
    data-index="index"
    class="evidence-item {{item.fileName ? 'is-img' : ''}}"
  >
    <image
      wx:if="{{!item.fileName}}"
      class="upload-icon"
      catchtap="openChoseBox"
      data-index="{{index}}"
      src="assets/img/ic_upload@2x.png"
    >
    </image>
    <view wx:if="{{!item.fileName}}" class="upload-text">{{evidenceData[index].label}}</view>
    <image wx:if="{{item.fileName}}" class="evidence-image" mode="aspectFill" src="{{item.fileName}}"></image>
    <image
      wx:if="{{item.fileName}}"
      class="del-icon"
      catchtap="deleteImage"
      data-index="{{index}}"
      src="assets/img/ic_close@2x.png"
    >
    </image>
    <view wx:if="{{item.fileName}}" class="has-image-textWrap">
      <text class="has-image-text">{{evidenceData[index].imageLabel}}</text>
    </view>
  </view>
