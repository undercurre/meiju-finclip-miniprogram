  <view class="time-bar">
    <view class="time-text time-text-first">购买日期 <text style="color: #ff0000">*</text></view>
    <view class="time-text time-text-last {{buyTime?'bColor':''}}" bindtap="showTimePicker"
      >{{buyTime?buyTime:'选择购买日期'}}
    </view>
    <image class="time-arrow" bindtap="showTimePicker" src="assets/img/arrow-right.png"></image>
  </view>
  <view class="submit-btn-wrap">
    <text wx:if="{{disabled}}" class="submit-btn">确定</text>
    <text wx:if="{{!disabled}}" class="submit-btn submit" bindtap="submit">确定</text>
  </view>

