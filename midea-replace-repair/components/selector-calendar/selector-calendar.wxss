.selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  background-color: rgba(0, 0, 0, 0.4);
  transition: opacity 0.6s;
  z-index: 10;
}

.selector-container {
  position: fixed;
  /* top: 0; */
  left: 0;
  right: 0;
  bottom: -450px;
  /* height: 450px; */
  background: #fff;
  /* transform: translateY(450px); */
  transition: bottom 0.3s;
  z-index: 10;
}

.selector-header {
  position: relative;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-bottom: 1px solid #ececec;
  font-size: 16px;
  background: #fff;
}

.selector-header .icon-close {
  position: absolute;
  right: 15px;
  top: 50%;
  /* -webkit-transform: translateY(-50%);
  transform: translateY(-50%); */
  width: 18px;
  height: 18px;
  background-size: 100%;
}

.selector-content {
  height: 376px;
  overflow: auto;
}

.select-content-head {
  position: relative;
  background: #fff;
  z-index: 1;
  width: 100%;
  border-bottom: 1px solid #eee;
}

.select-content-head .select-block {
  display: inline-block;
  font-size: 14px;
  margin-left: 30px;
  padding: 10px 0 5px 0;
  line-height: 16px;
}

.select-content-head .active {
  color: #318bf5;
  border-bottom: 2px solid #318bf5;
}

.select-content-body {
  width: 100%;
  overflow: auto;
  height: 100%;
  background: #fff;
}

.select-content-body .col-list {
  display: flex;
  width: 100%;
  overflow: auto;
  /* height: 352px; */
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-flow: column wrap;
  flex-flow: column wrap;
  /* padding: 0 18px; */
  box-sizing: border-box;
  -webkit-align-content: space-between;
  align-content: space-between;
}

.select-content-body .col-item {
  padding: 15px 0 15px 30px;
  width: 100%;
  line-height: 14px;
  color: #333;
  font-size: 14px;
}

.select-content-body .active {
  color: #318bf5;
  background: url('https://weixin.midea.com/apps/miniprogram-midea-service/selector/selected.png') no-repeat center
    right 20px;
  background-size: 20px 20px;
}

.selector-tabs {
  width: 100%;
  line-height: 50px;
  border-bottom: 1px solid #ececec;
}

.product-list {
  background: #f4f4f4;
}

.product-item {
  z-index: 1;
  overflow: hidden;
  position: relative;
  padding: 20px 85px 10px 76px;
  margin-top: 10px;
  background-color: #fff;
  box-sizing: border-box;
}

.product-item .item-left {
  position: absolute;
  top: 50%;
  left: 10px;
  margin-top: -30px;
  overflow: hidden;
  width: 60px;
  max-height: 60px;
  text-align: center;
}

.product-item .item-right {
  width: 100%;
}

.item-right .name {
  position: relative;
  display: inline-block;
  overflow: hidden;
  padding-right: 30px;
  font-size: 14px;
  font-weight: normal;
}

.item-right .desc {
  line-height: 20px;
  font-size: 12px;
  color: #999;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.add-content {
  padding: 0 15px;
}

.add-content .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 16px 0;
  width: 100%;
  font-size: 14px;
  border-bottom: 1px solid #efefef;
}

.item-label {
  width: 90px;
  color: #333;
  font-size: 16px;
}

.item-input {
  flex: 1;
  padding-right: 15px;
}

.item-input input {
  border: none;
  font-size: 14px;
  color: #333333;
  width: 100%;
}

.item-icon {
  position: relative;
  top: 1px;
  width: 20px;
  height: 20px;
}

.buttons {
  display: flex;
  justify-content: center;
  padding: 20px 0 10px 0;
  font-size: 14px;
}

.btn-cancel,
.btn-primary {
  flex: 1;
  height: 36px;
  line-height: 36px;
  text-align: center;
  border: 1px solid #ccc;
  /* border-radius: 6px; */
  color: #333;
}

.btn-primary {
  margin-left: 15px;
  /* background: #318bf5;
  border-color: #318bf5; */
  color: #ffffff;
}

.input-placeholder {
  color: #999;
}

.address-list {
  padding: 0 15px;
}

.address-item {
  padding: 15px 0;
  width: 100%;
  border-bottom: 1px solid #efefef;
}

.address-item .row {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding: 2px 0;
}
.inline-loading::after {
  content: ' ';
  display: inline-block;
  width: 18px;
  height: 18px;
  vertical-align: middle;
  -webkit-animation: wx-button-loading-animate 1s steps(12, end) infinite;
  animation: wx-button-loading-animate 1s steps(12, end) infinite;
}

@keyframes wx-button-loading-animate {
  to {
    transform: rotate(360deg);
  }
}

.inline-calendar-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 101;
  background: #eee;
  overflow-y: scroll;
  max-height: 100%;
  transition: bottom 0.3s;
  border-radius: 32rpx 32rpx 0 0;
}

.service-title {
  padding: 4px 8px;
  border-bottom: solid 1px rgba(224, 224, 224, 0.3);
  font-size: 15px;
  background-color: #ffffff;
}

.service-title text {
  font-size: 13px;
  font-family: 'Microsoft JhengHei';
  color: #999;
}

.service-date-arr {
  display: flex;
  width: 100%;
  padding: 10px;
  background: #fff;
}

.service-item {
  flex: 1;
  display: block;
  width: 100%;
  text-align: center;
}

.service-weekday {
  padding: 2px;
  font-size: 15px;
}

.service-date {
  padding: 2px;
  margin: 5px 0;
  font-size: 13px;
  border-radius: 20px;
  color: #3a3a3a;
}

.time {
  width: 100%;
  padding: 10px 5%;
  font-size: 0;
  background-color: #ffffff;
}

.time-item {
  display: inline-block;
  width: calc(33.3% - 12px);
  padding: 3px 0;
  margin: 5px 15px 5px 0;
  border: solid 1px #ccc;
  border-radius: 4px;
  font-size: 14px;
  text-align: center;
}

.disable {
  border: solid 1px #d6d6d6;
  background-color: #ffffff;
  color: #d6d6d6;
}

.selected {
  border: solid 1px #318bf5;
  background-color: #318bf5;
  color: #ffffff;
}

.service-memo {
  padding: 8px;
  font-size: 12px;
  color: #ff9a03;
  background-color: #fff7de;
  box-sizing: border-box;
}

