<view class="selector-product">
  <view
    class="selector-mask"
    catchtouchmove="hideSelector"
    catchtap="hideSelector"
    hidden="{{!isShow}}"
    style="opacity: {{isShow ? '1' : '0'}}"
  ></view>
  <view class="inline-calendar-content" style="bottom: {{isShow ? '0' : '-400px'}}">
    <picker-view
      indicator-style="height:72rpx;line-height:72rpx"
      style="width: 100%; height: 362rpx"
      value="{{value}}"
      bindchange="bindChange"
    >
      <picker-view-column>
        <view wx:for="{{yearArray}}" wx:key="index" class="test" style="text-align: center">{{item}}年</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{monthArray}}" wx:key="index" class="test" style="text-align: center">{{item}}月</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{dateArray}}" wx:key="index" class="test" style="text-align: center">{{item}}日</view>
      </picker-view-column>
    </picker-view>
    <view style="height: 16rpx; background: #f9f9f9"></view>
    <view class="btn-group" style="padding-bottom: {{ isIphoneX ? '60' : '30' }}rpx">
      <view class="btn-cancel" catch:tap="hideSelector">{{cancelText}}</view>
      <view class="vertical-line"></view>
      <view class="btn-primary" catch:tap="onSelectItem">{{confirmText}}</view>
    </view>
  </view>
</view>
