<view class="active-dialog" wx:if="{{ isShowDialog }}">
  <view class="active-mask"></view>
  <view class="active-main">
    <view class="top_article">
      <view class="common-title">{{title}}</view>
      <view class="common-content" style="text-align:{{textAlign}}">{{content}}</view>
    </view>
    <view class="common-btn">
      <text class="btn-only" bindtap="makeSure">{{btnz_only}}</text>
      <view wx:if="{{showSubmit}}" class="vertical-line"></view>
      <text wx:if="{{showSubmit}}" class="btn-submit" bindtap="submit">{{btnz_submit}}</text>
    </view>
  </view>
</view>
