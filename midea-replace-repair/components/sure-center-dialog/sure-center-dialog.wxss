.active-dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.active-mask {
  width: 100%;
  height: 100%;
  opacity: 0.4;
  background: #000000;
}

.active-main {
  width: 540rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  background: #ffffff;
  border-radius: 26rpx;
  transform: translate(-50%, -50%);
}
.top_article {
  padding: 38rpx 30rpx 28rpx;
  border-bottom: 1rpx solid #c8c7cc;
}
.common-title {
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  line-height: 42rpx;
  color: #000000;
  letter-spacing: -0.72rpx;
  text-align: center;
  /* font-weight: 500; */
  font-weight: bold;
}
.common-content {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  letter-spacing: -0.58rpx;
  line-height: 44rpx;
  font-weight: 500;
  margin-top: 27rpx;
  /* text-align: center; */
  text-align: left;
}
.common-btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 89rpx;
  line-height: 89rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #0078ff;
  letter-spacing: -0.77rpx;
  text-align: center;
}

.btn-only {
  /* width:50%; */
  flex: 1;
  height: 89rpx;
  line-height: 89rpx;
  display: inline-block;
}

.vertical-line {
  width: 2rpx;
  height: 89rpx;
  background-color: #c8c7cc;
  z-index: 9999;
}

.btn-submit {
  /* width:50%; */
  flex: 1;
  height: 89rpx;
  line-height: 89rpx;
  display: inline-block;
}
