/* activities/replace365/pages/home/home.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f9f9f9;
  /* background-color: #333; */
}
.replace-bg-img {
  width: 750rpx;
  height: 320rpx;
}
.replace-card-img {
  width: 686rpx;
  height: 416rpx;
  margin-top: -172rpx;
  z-index: 99;
}
.replace-card-button {
  width: 330rpx;
  height: 130rpx;
  margin-top: -204rpx;
  z-index: 100;
}
.relace-service-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 686rpx;
  height: 240rpx;
  margin-top: 60rpx;
  background-color: #ffffff;
  /* background-color: #267aff; */
  border-radius: 16rpx;
}
.relace-service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.replace-service-img {
  width: 140rpx;
  height: 140rpx;
}
.replace-service-title {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #7c7d89;
  letter-spacing: 0;
  text-align: center;
  font-weight: 400;
  margin-top: 14rpx;
}
.replace-regular-wrap {
  display: flex;
  /* width: 686rpx; */
  width: 638rpx; /* 686-(100+514)=72   72/3=24 686-24*2=638 */
  flex-direction: column;
  align-items: center;
  margin-top: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 120rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
}
.replace-regular-title {
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #aaacb8;
  letter-spacing: 0;
  font-weight: 600;
  margin-top: 50rpx;
}
.regular-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 80rpx;
}
.regular-service-img {
  width: 100rpx;
  height: 100rpx;
}

.regular-right {
  display: flex;
  flex-direction: column;
  width: 514rpx;
  margin-left: 24rpx;
}
.regular-service-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 32rpx;
  font-weight: 500;
}
.regular-service-describe {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #989aa7;
  letter-spacing: 0;
  line-height: 34rpx;
  font-weight: 400;
  margin-top: 16rpx;
  white-space: pre-wrap; /* 换行 */
}
