@import '../../common.wxss';
.back-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 999;
}
.invite-content {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}
.box-content {
  width: 600rpx;
  height: 1050rpx;
}
.detail-content {
  position: relative;
  width: 100%;
  height: 910rpx;
  border-radius: 20rpx;
  text-align: center;
}
.close-icon {
  padding-top: 84rpx;
}
.close-icon-img {
  width: 56rpx;
  height: 56rpx;
  display: block;
  margin: 0 auto;
}
.main-img {
  width: 555rpx;
  height: 358rpx;
  display: block;
  margin: 0 auto;
}
.qrcode-img {
  width: 222rpx;
  height: 222rpx;
  display: block;
  margin: 0 auto;
}
.qrcode-text {
  font-size: 24rpx;
  color: #ffffff;
  margin: 24rpx 0 30rpx 0;
}
.qrcode-desc {
  font-size: 28rpx;
  color: #ffffff;
  padding: 0 135rpx;
  margin-bottom: 30rpx;
}
.save-content {
  width: 424rpx;
  position: absolute;
  left: 88rpx;
  bottom: 54rpx;
}
.save-btn {
  position: absolute;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 36rpx;
  color: #ff664f;
  border-radius: 72rpx;
  background-image: linear-gradient(-180deg, #ffffff 0%, #ffdbac 100%);
  box-shadow: 0 4px 7px 0 rgba(242, 84, 36, 0.73);
}
.qrcode-content {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content-img {
  width: 600rpx;
  height: 910rpx;
  border-radius: 20rpx;
}
