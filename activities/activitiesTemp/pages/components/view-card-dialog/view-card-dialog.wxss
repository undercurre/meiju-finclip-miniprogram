@import '../../common.wxss';
.dialog-container {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}
.dialog-mask {
  position: fixed;
  background: #000;
  opacity: 0.6;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.dialog-main {
  box-sizing: border-box;
  width: 600rpx;
  height: 741rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 1000;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
  background-color: #fff;
  background-color: inherit;
}
.dialog-title {
  margin-top: 20rpx;
  text-align: center;
  font-size: 60rpx;
  color: #ffffff;
  letter-spacing: 2.64rpx;
  text-align: center;
  font-weight: bold;
}

.dialog-btns {
  width: 100%;
  /* border-top:2rpx solid #eee; */
  padding: 20rpx 0 20rpx;
}
.dialog-btns-item {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 424rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin: 20rpx auto;
  text-align: center;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  border-radius: 30rpx;
  background-image: linear-gradient(-180deg, #ffffff 0%, #ffdbac 100%);
  box-shadow: 0 4rpx 7rpx 0 rgba(242, 84, 36, 0.73);
  font-size: 36rpx;
  color: #ff664f;
}
.dialog-close {
  position: absolute;
  left: 50%;
  bottom: -110rpx;
  transform: translateX(-50%);
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  color: #fff;
  border: 2rpx solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dialog-close image {
  width: 100%;
  height: 100%;
}
.dialog-card-num {
  width: 428rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  opacity: 0.55;
  background: #dc7945;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #ffffff;
}
.dialog-sec {
  padding: 187rpx 48rpx 0 48rpx;
  color: #ffffff;
  font-size: 24rpx;
}
.app-text {
  text-align: center;
  /* margin: 20rpx 0 30rpx 0; */
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}
.content-img {
  display: block;
  /* width: 180rpx; */
  width: 100%;
  height: 100%;
  /* margin: 0 auto; */
}
.coupon-btns {
  position: absolute;
}
.name-text {
  /* margin: 15rpx 0 30rpx 0; */
  font-size: 32rpx;
  text-align: center;
  color: #ffffff;
}
.card-num {
  position: absolute;
  text-align: center;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-align {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
