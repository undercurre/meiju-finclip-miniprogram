@import '../../common.wxss';
.dialog-container {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}
.dialog-mask {
  position: fixed;
  background: #000;
  opacity: 0.6;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.dialog-main {
  box-sizing: border-box;
  width: 600rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 1000;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
  /* background: #fff; */
  background-color: inherit;
}
.coupon-btns {
  position: absolute;
}
.dialog-title {
  padding-top: 40rpx;
  text-align: center;
  font-size: 42rpx;
  color: #1d1d1d;
  letter-spacing: 2.76rpx;
  line-height: 46rpx;
}
.dialog-sec {
  padding: 40rpx 64rpx;
  color: #ffffff;
  font-size: 24rpx;
}
.dialog-content-max {
  height: 320rpx;
  overflow-y: auto;
}
.content-item {
  display: flex;
  background: #f0f0f0;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #1d1d1d;
  padding: 0 20rpx 0 10rpx;
  margin-bottom: 20rpx;
}
.content-item:nth-last-child(1) {
  margin-bottom: 0;
}
.item-left {
  width: 90rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  margin-right: 47rpx;
}
.reward-icon {
  display: block;
  width: 90rpx;
  height: 90rpx;
}
.reward-name {
  height: 110rpx;
  line-height: 110rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.dialog-btn {
  border-top: 2rpx solid #eeeeee;
  display: flex;
}
.dialog-btn-item {
  flex: 1;
  font-size: 32rpx;
  color: #267aff;
  text-align: center;
  line-height: 104rpx;
}
.btn-left {
  border-right: 1rpx solid #eeeeee;
}
