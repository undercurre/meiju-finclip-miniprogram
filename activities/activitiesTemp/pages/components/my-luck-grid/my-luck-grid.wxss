@import '../../common.wxss';
.grid-desc {
  position: relative;
}
.grid-item {
  position: absolute;
}
.img-mask {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.luck-num {
  position: absolute;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  z-index: 99;
}
.custom14 {
  animation: lampbg1 1s infinite;
  opacity: 1;
}
.custom15 {
  animation: lampbg2 1s infinite;
  opacity: 0;
}
