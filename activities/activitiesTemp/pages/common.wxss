.button-common {
  padding: 0;
  box-sizing: border-box;
  background: none;
  border-radius: 0;
}
.button-common::after {
  border: none;
}
.text-color1 {
  color: #ff6049;
}
.text-overflow {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.common-target {
  position: absolute;
  /* border: 2rpx solid #ff0000; */
}
.bodyLock {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
  /* height: 100%; */
  /* overflow-y: hidden;*/
}
.shadow {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ff0000;
  z-index: 9999;
  opacity: 0;
}
.page-inner {
  overflow: auto;
  height: 100vh;
}
.page-inner-hidden {
  overflow: hidden;
}
.full-shadow {
  position: absolute;
  background: #ffffff;
  opacity: 0;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100%;
  z-index: 1999;
}
.common-row {
  display: flex;
}
.common-column {
  display: flex;
  flex-direction: column;
}
.common-center {
  justify-content: center;
  align-items: center;
}
.justify-between {
  justify-content: space-between;
}
.justify-around {
  justify-content: space-around;
}
.justify-center {
  justify-content: center;
}
.justify-end {
  justify-content: flex-end;
}
.align-center {
  align-items: center;
}
.bg-normal {
  background-repeat: no-repeat;
  background-size: 100% auto;
}
.bg-hundred {
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
