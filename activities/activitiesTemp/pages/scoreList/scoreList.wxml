<!-- activities/activitiesTemp/pages/scoreList/scoreList.wxml -->
<wxs src="../common.wxs" module="c1"></wxs>
<wxs module="s1" src="./scoreList.wxs"></wxs>
<navbar text="{{ pageSetting.name }}" back="{{ true }}" home="{{ false }}"></navbar>

<view
  class="container bg-normal"
  style="min-height:calc(100vh - {{statusNavBarHeight}}px);{{s1.getStyle(scoreList, pageSetting)}}"
>
  <view
    class="container-item"
    wx:for="{{ containerList }}"
    wx:key="id"
    wx:for-item="containerItem"
    wx:for-index="containerIndex"
  >
    <view class="main" wx:if="{{scoreList.length > 0 && containerIndex == 0}}">
      <view
        class="main-item common-row justify-between align-center"
        wx:for="{{scoreList}}"
        wx:key="ids"
        wx:for-item="scoreItem"
      >
        <view class="main-left common-column justify-between">
          <view class="main-left-desc">{{scoreItem.desc}}</view>
          <view class="main-left-time">{{scoreItem.createTime}}</view>
        </view>
        <view class="main-right" style="color:{{scoreItem.changeType == 0 ? '#E3394E' : '#1D1D1D'}}">
          <text>{{scoreItem.changeType == 0 ? "+" : "-"}}</text>
          <text>{{scoreItem.score}}</text>
        </view>
      </view>
    </view>
    <view
      wx:else
      style="height:{{containerItem.height}}rpx;background-image:url({{containerItem.background}})"
      class="bg-normal"
    >
      <view class="" wx:for="{{ containerItem.basicList }}" wx:for-item="basicItem" wx:key="ids">
        <view
          class="common-target bg-normal"
          data-item="{{ basicItem }}"
          data-selectcontainer="{{ containerItem }}"
          bindtap="actionCustomHotzone"
          style="{{c1.getBIStyle(basicItem)}}"
        ></view>
      </view>
    </view>
  </view>
</view>
