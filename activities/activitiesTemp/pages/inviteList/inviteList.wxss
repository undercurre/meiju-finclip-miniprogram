/* activities/activitiesTemplates/pages/InviteToFamily/InviteToFamily.wxss */
@import '../common.wxss';
page {
  background: #fff;
}
.main {
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
}
.main-item {
  position: relative;
  display: flex;
  justify-content: flex-start;
  border-bottom: 2rpx solid #eee;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.main-left {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  background: #eee;
}
.main-left image {
  width: 100%;
  height: 100%;
}
.main-middle {
  margin-left: 30rpx;
}
.main-createtime {
  position: absolute;
  font-size: 26rpx;
  color: #7c7c7c;
  right: 0rpx;
  top: 20rpx;
}
.main-middle-title {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #1d1d1d;
  margin-bottom: 10rpx;
}
.main-middle-createtime {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #7c7c7c;
  text-align: right;
}
.main-middle-subtitle {
  width: 456rpx;
  font-size: 26rpx;
  color: #7c7c7c;
}
.main-middle-label {
  font-size: 26rpx;
  color: #ff9439;
}
.nolist {
  text-align: center;
}
.nolist-top {
  width: 427rpx;
  height: 365rpx;
  margin: 180rpx auto 30rpx;
}
.nolist-top image {
  width: 100%;
  height: 100%;
}
.nolist-text1 {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #1d1d1d;
  margin-bottom: 20rpx;
}
.nolist-text2 {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #7c7c7c;
}
.nolist-button {
  background-image: linear-gradient(-180deg, #ff884e 6%, #fb4a2d 98%);
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 80rpx auto;
  color: #fff;
  border-radius: 40rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container-item {
  position: relative;
}
