
page{
  background-color: #f9f9f9;
  --iphonex-fix-bottom: env(safe-area-inset-bottom);
}

.scan-code-container{
  background-color: #fff;
  margin-top: 28rpx;
  padding: 32rpx;
  height: calc(100vh - var(--iphonex-fix-bottom) - 228rpx - var(--height));
  font-size: 28rpx;
  color: #000000;
  line-height: 42rpx;
  font-weight: 400;
  word-break:break-all;
  /* //word-wrap: break-all; */
}

.btn-container{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 32rpx calc(var(--iphonex-fix-bottom));
  background-color: #f9f9f9;
  z-index: 1;
  height: 128rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #267AFF;
  line-height: 32rpx;
  font-weight: 500;
}