.dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100000;
}

.dialog-mask {
  width: 100%;
  height: 100%;
  opacity: 0.4;
  background: #000000;
}

.dialog-main {
  width: 578rpx;
  height: 554rpx;
  position: absolute;
  left: 50%;
  top: 45%;
  background: #ffffff;
  border-radius: calc(13rpx * 2);
  transform: translate(-50%, -50%);
  text-align: center;
}

.dialog-main-b {
  width: 578rpx;
  height: 552rpx;
  position: absolute;
  left: 50%;
  top: 45%;
  background: #ffffff;
  border-radius: calc(13rpx * 2);
  transform: translate(-50%, -50%);
  text-align: center;
}

.dialog-main-bg {
  position: absolute;
  top: -25rpx;
  right: 20rpx;
  width: 250rpx;
  height: 318rpx;
}
.dialog-arrow {
  margin-left: 8rpx;
  position: relative;
  width: 28rpx;
}
.dialog-arrow-image {
  position: absolute;
  top: 44rpx;
  left: 0;
  width: 28rpx;
  height: 28rpx;
}
.dialog-arrow-image-click {
  position: absolute;
  left: -10rpx;
  bottom: -10rpx;
  right: -10rpx;
  top: -10rpx;
}
.dialog-content {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 70rpx auto 80rpx;
}
.dialog-content-b {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
.dialog-content-item {
  /* margin: 10rpx; */
  display: flex;
}
.dialog-title {
  margin-top: 80rpx;
  font-size: 40rpx;
  color: #000000;
  text-align: start;
  font-weight: 500;
  margin-left: 40rpx;
}
.dialog-title-b {
  margin-top: 62rpx;
  margin-left: 32rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: start;
  font-weight: 500;
  line-height: 50rpx;
}
.dialog-reward {
  font-size: 56rpx;
  color: #ff9500;
  margin: 10rpx auto 40rpx;
  display: flex;
  justify-content: start;
  margin-left: 40rpx;
  font-weight: 500;
}
.dialog-reward-b {
  display: flex;
  margin-left: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 32rpx;
}
.addPoints {
  font-family: PingFangSC-Medium;
  font-size: 56rpx;
  color: #FF9500;
  letter-spacing: 0;
  line-height: 44rpx;
  font-weight: 500;
}
.PointText {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FF9500;
  letter-spacing: 0;
  line-height: 28rpx;
  font-weight: 500;
  position: relative;
  bottom: 0;
}
.dialog-content-reward {
  opacity: 0.8;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  line-height: 52rpx;
  text-align: center;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.dialog-content-reward-active {
  position: relative;
  opacity: 1;
  border-radius: 50%;
  background-image: linear-gradient(180deg, #ff9500 0%, #ffcc00 100%);
}
.check-style-unequal-width {
  position: absolute;
  top: 13rpx;
  left: 20rpx;
  width: 8rpx;
  height: 16rpx;
  border-color: #fff;
  border-style: solid;
  border-width: 0 5rpx 5rpx 0;
  transform: rotate(45deg);
}

.dialog-hasSign {
  color: #fff;
  background-image: linear-gradient(180deg, #ff9500 0%, #ffcc00 100%);
}
.dialog-noSign {
  color: #c7c7cc;
  background: #f9f9f9;
}
.dialog-desc {
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #ff9500;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
}
.dialog-desc-b {
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #ff9500;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
}
.dialogContentDay {
  text-align: center;
  font-size: 20rpx;
}
.dialog-content-sign-color {
  color: #000000;
}
.dialog-content-notsign-color {
  color: #ccc;
}
.dialog-desc-image {
  width: 32rpx;
  height: 34rpx;
  margin-right: 6rpx;
}
.dialog-reward-text {
  font-size: 28rpx;
  color: #ff9500;
}
.itemConnect {
  width: 12rpx;
  height: 4rpx;
  margin-top: 24rpx;
}
.connect-sign {
  background: #ffc033;
}
.connect-notsign {
  background: #f9f9f9;
}
.conect-left {
  margin-right: 2rpx;
}
.conect-right {
  margin-left: 2rpx;
}

.cancle-btn-box {
  margin: 104rpx auto 0;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 2px solid #d1d1d1;
  background: rgba(255, 255, 255, 0.2);
}

.cancle-btn-box-b {
  margin: 70rpx auto 0;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 2px solid #d1d1d1;
  background: rgba(255, 255, 255, 0.2);
}

.cancle-btn-box-left,
.cancle-btn-box-rignt {
  position: absolute;
  background-color: #d1d1d1;
  width: 4rpx;
  height: 40rpx;
}

.cancle-btn-box-left {
  transform: rotate(45deg);
}

.cancle-btn-box-rignt {
  transform: rotate(-45deg);
}
.cancle-imgs {
  width: 72rpx;
  height: 72rpx;
}
.dialog-top {
  width: 100%;
