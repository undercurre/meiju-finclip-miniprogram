.content {
  background-color: #f9f9f9;
  width: 100%;
  height: 100vh;
}

.device {
  background-color: #f9f9f9;
  padding: 30rpx;
}

.fault {
  background-color: #f9f9f9;
  padding: 0rpx 30rpx 30rpx 30rpx;
}

.info {
  background: #fff;
  border-radius: 22rpx;
}

.line {
  padding: 14rpx;
  display: flex;
  flex-direction: row;
}

.label {
  color: #999999;
  margin-right: 32rpx;
  width: 140rpx;
  text-align: right;
}

.desc {
  color: #000000;
  width: calc(100% - 160rpx);
}

.faultDesc {
  color: #eb5402;
  width: calc(100% - 160rpx);
}

.btnBox {
  padding: 0 32rpx;
}

.btn {
  position: fixed;
  bottom: 100rpx;
  width: 686rpx;
  height: 92rpx;
}

.repair-btn {
  display: inline-block;
  width: 100%;
  height: 100%;
  background: #267aff;
  color: #fff;
  text-align: center;
  line-height: 92rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
}
