/* m-ui/m-cell/m-cell.wxss */
.m-card{
  /* width: 100vw; */
}
.card-item {
  /* //width: 686rpx; */
  height: 160rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  margin: auto;
  /* background-color: lightgreen; */
  background-color: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}
.icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 32rpx;
  border-radius: 50%;
}
.content {
  /* width: 540rpx; */
  flex: 1;
}

.title {
  color: #000;
  font-size: 32rpx;
  /* font-weight: bold; */

  /* 新增两个标题 处理 */
  display: flex;
  flex-direction: row;
  align-items: center;
}
.subTitle {
  color: #8A8A8F;
  font-size: 24rpx;
  /* margin-top: 16rpx;    行内根据title实现 */
}
.arrow {
  width: 18rpx;
  height: 22rpx;
  margin-left: 12rpx;
}
.right-text{
  font-size: 32rpx;
  color: #666666;
  letter-spacing: 0;
  margin-right: 12rpx;
}

.top-radius{
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.bottom-radius{
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}