/*  fake search end   */


.search-input {
	height: 72rpx;
  padding: 24rpx 32rpx;
  
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}
.input-sec {
	position: relative;
	height: 72rpx;
	background: #f6f6f6;
	border-radius: 36rpx;
  padding-right: 88rpx;

  flex: 1;
}
.input-text {
	font-size: 28rpx;
	height: 72rpx;
	line-height: 72rpx;
	color: #000000;
	padding-left: 56rpx;
  font-weight: bold;  /* kkk add */
  flex: 1;
}
.input-icon {
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	left: 16rpx;
	top: 50%;
	transform: translateY(-50%);
	background: no-repeat  no-repeat  -314rpx -166rpx;
	background-size: 800rpx auto; 
}
.del-icon-box{
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	z-index: 100;
	width: 88rpx;
	height: 72rpx;
	display: flex;
	align-items: center;
}
.del-icon{
	width: 36rpx;
	height: 36rpx;
	background: no-repeat  no-repeat  -384rpx -166rpx;
	background-size: 800rpx auto;
	margin: 0 auto;
}

.right-btn{
  color: #666666;
  margin-left: 32rpx;
}
