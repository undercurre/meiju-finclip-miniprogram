<wxs src="../wxs/utils.wxs" module="utils" />
<wxs src="./index.wxs" module="computed" />

<view
  class="custom-class {{ utils.bem('cell', [size, { center, required, borderless: !border, clickable: isLink || clickable }]) }}"
  hover-class="mx-cell--hover hover-class"
  hover-stay-time="70"
  style="{{ customStyle }}"
  bind:tap="onClick"
>
  <mx-icon wx:if="{{ icon }}" name="{{ icon }}" class="mx-cell__left-icon-wrap" custom-class="mx-cell__left-icon" />
  <slot wx:else name="icon" />

  <view style="{{ computed.titleStyle({ titleWidth, titleStyle }) }}" class="mx-cell__title title-class">
    <block wx:if="{{ title }}">{{ title }}</block>
    <slot wx:else name="title" />

    <view wx:if="{{ label || useLabelSlot }}" class="mx-cell__label label-class">
      <slot wx:if="{{ useLabelSlot }}" name="label" />
      <block wx:elif="{{ label }}">{{ label }}</block>
    </view>
  </view>

  <view class="mx-cell__value value-class">
    <block wx:if="{{ value || value === 0 }}">{{ value }}</block>
    <slot wx:else />
  </view>

  <mx-icon
    wx:if="{{ isLink }}"
    name="{{ arrowDirection ? 'arrow' + '-' + arrowDirection : 'arrow' }}"
    class="mx-cell__right-icon-wrap right-icon-class"
    custom-class="mx-cell__right-icon"
  />
  <slot wx:else name="right-icon" />

  <slot name="extra" />
</view>
