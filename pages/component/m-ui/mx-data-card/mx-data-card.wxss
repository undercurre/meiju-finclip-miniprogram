/* m-ui/mx-data-card/mx-data-card.wxss */
@import '../../m-ui/assets/common.wxss';
.container-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 686rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 20rpx 0 rgba(0,0,0,0.04);
  border-radius: 32rpx;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.icon{
  width: 72rpx;
  height: 72rpx;
  background-color: #F2F2F2;
  padding:22rpx;
  border-radius: 50%;
}
.icon:first-child{
  margin-left: 48rpx;
}
.icon:last-child{
  margin-right: 48rpx;
}
.center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.label{
  font-family: DINAlternate-Bold;
  font-size: 72rpx;
  color: #333333;
  line-height: 72rpx;
  font-weight: 700;
}
.describe{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  line-height: 24rpx;
  font-weight: 400;
}
