.networkless {
  padding-top: 172rpx;
  width: 100%;
  height: 100vh;
  background: #f9f9f9;
  box-sizing: border-box;
}
.networkless-img {
  display: block;
  margin: 0 auto;
  width: 320rpx;
  height: 320rpx;
}
.networkless-text {
  margin: 48rpx 0 36rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 400;
}
.networkless-btn {
  display: flex;
  margin: 0 auto;
  width: 240rpx;
  height: 72rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  background: #267aff;
  border-radius: 48px;
}
