.container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 128rpx;
  padding: 20rpx 20rpx 0rpx 20rpx;
  background: #ffffff;
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
}

.device-icon {
  width: 56px;
  height: 56px;
  margin-right: 8px;
}
.device-name {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  color: #000000;
  line-height: 48rpx;
  font-weight: 500;
}
.device-room {
  font-size: 24rpx;
  color: #666666;
  line-height: 24rpx;
  font-weight: 400;
  margin-top: 12rpx;
}
