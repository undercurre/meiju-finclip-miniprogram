.container {
  background: #ffffff;
  position: fixed;
  width: 100vw;
  bottom: 0;
  z-index: 888;
  font-size: 30rpx;
  border-radius: 32rpx 32rpx 0 0;
}

.mask {
  background: #000000;
  opacity: 0.4;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 600;
}

.notice {
  text-align: center;
  margin-top: 48rpx;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
}

.scrollView {
  max-height: 50vh;
}

.item {
  height: 160rpx;
  display: flex;
  flex-direction: row;
  margin: 0rpx 32rpx 16rpx 16rpx;
  position: relative;
}

.divider {
  height: 2rpx;
  margin-left: 176rpx;
  background: #f2f2f2;
}

.deviceImg {
  width: 96rpx;
  height: 96rpx;
  margin: 32rpx;
}

.name {
  height: 160rpx;
  line-height: 160rpx;
  font-size: 32rpx;
  color: #000000;
  font-weight: 400;
}

.check {
  position: absolute;
  right: 0px;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.opButton {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #ffffff;
  box-shadow: 0 -4px 8px 0 rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
}

.cancelBtn {
  width: 336rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: #e9f1ff;
  color: #267aff;
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 30rpx;
  margin-right: 14rpx;
  margin-bottom: 30rpx;
}

.addBtn {
  width: 336rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: #267aff;
  color: #ffffff;
  border-radius: 46rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
