<!--取暖器-->
<view class="continer">
	<mx-nav-bar title="{{title}}" bind:click-left="onClickLeft" bgColor="#F9F9F9" />
	<view class="device-card">
		<device-card wx:if="{{isInit}}" class="component{{deviceInfo.applianceCode}}" applianceData="{{deviceInfo}}" />
	</view>
	<view wx:if="{{fromApp}}" class="bottom-box">
		<button
		 class="openMeiJuAPpp"
		 style="display:inline-block;"
		 open-type="launchApp"
		 app-parameter="{{appParameter}}"
		 binderror="launchAppError"
		 bindtap="test"
		>
			<text class="blue">打开美居App</text>
		</button>
		<text>解锁更多功能</text>
	</view>
</view>
<media-toast id="media-toast" />

