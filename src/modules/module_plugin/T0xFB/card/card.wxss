/*设备信息*/
.btn-main-wrapper {
  width: 550rpx;
  height: 550rpx;
  border-radius: 100%;
  /*box-shadow: 0 0 50rpx 0 #000;*/
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 120% 120%;
}
.btn-main-wrapper .device-status {
  font-family: PingFangSC-Medium;
  font-size: 60rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  font-weight: 500;
}
.device-running-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.device-running-info .label {
  color: #666;
  font-size: 24rpx;
  text-align: center;
}
.device-running-info .label .value {
  font-size: 30rpx;
}
.device-running-info .temperature-value {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  line-height: 140rpx;
  /* margin-bottom: 10rpx; */
}
.device-running-info .temperature-value.gear-value {
  padding-left: 0;
}
.temperature-value .value {
  font-size: 60rpx;
  line-height: 140rpx;
  font-family: PingFangSC-Medium;
}
.temperature-value .unit {
  font-size: 40rpx;
}

.controller-wrapper {
  padding: 30rpx;
  box-sizing: border-box;
  /* overflow-y: auto; */
  position: relative;
}
.openMeiJuAPpp {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 0;
  font-weight: 400;
  margin-top: 20rpx;
  text-align: center;
  white-space: nowrap;
  word-break: keep-all;
}
.openMeiJuAPpp .link {
  color: #267aff;
}
.openMeiJuAPpp .icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.bottom-fixed {
  margin: 0;
  padding-bottom: 0;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 70rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  position: relative;
}
.row .item {
  flex: 1;
}
.row .item:nth-of-type(even) {
  margin-left: 20rpx;
}
.row .item .center-wrapper{
  position: relative;
}
.item .header {
  margin-bottom: 20rpx;
}
.item .header .icon-wrapper {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
}
.item .header .icon {
  width: 50%;
}
.item .header .label {
  font-size: 32rpx;
  margin-left: 15rpx;
  margin-right: 20rpx;
}
.item .header .label-wrapper .theme-color {
  font-size: 24rpx;
  padding: 0 15rpx;
  line-height: 28rpx;
  border: 1px solid #ffaa10;
  color: #ffaa10;
  background-color: transparent;
  border-radius: 2rem;
}
.item .header .label-wrapper .theme-color_cold {
  font-size: 24rpx;
  padding: 0 15rpx;
  line-height: 28rpx;
  border: 1px solid #267aff;
  background-color: transparent;
  color: #267aff;
  border-radius: 2rem;
}
.item .header .label-wrapper .disabled {
  opacity: 0.4;
  font-size: 24rpx;
  padding: 0 15rpx;
  line-height: 28rpx;
  border: 1px solid #7c879b;
  color: #7c879b;
  background-color: transparent;
  border-radius: 2rem;
}
.button {
  border: 2rpx solid #c7c7cc;
  border-radius: 2rem;
  padding: 10rpx 80rpx;
  color: #666666;
}
.button.active {
  border-color: #ffaa10;
  background-color: #ffaa10;
  color: #fff;
}
.circle-button {
  padding: 0;
  width: 70rpx;
  height: 70rpx;
  border: 0;
  border-radius: 100%;
}
.circle-button .icon {
  width: 40rpx;
  height: 40rpx;
}

/*设备开关*/
.device-running-status {
  font-size: 32rpx;
  line-height: 32rpx;
}
.device-running-status .divider {
  width: 2rpx;
  height: 16rpx;
  background: #ddd;
  margin: 0 16rpx;
}
.btn-switch {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  padding: 0;
}
.btn-switch .icon {
  width: 40rpx;
}

/*定时开关*/
.timed-shutdown-label {
  font-size: 26rpx;
