/*档位控制 - 电暖桌*/
.ui8-card-title{
  font-size: 32rpx;
}
.ui8-card-title-icon-wrapper{
  padding: 0 10rpx;
  position: relative;
}
.ui8-card-title-icon{
  z-index: 2;
}
.ui8-card-title-icon-bg{
  background-color: #333333;
  width: 10px;
  height: 10px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 100%;
}
.slider-gear-item{
  margin-bottom: 40rpx;
}
.slider-gear-label{
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.slider-gear-label-line{
  margin: 0 10rpx;
  border: 1rpx solid #dddddd;
  height: 24rpx;
}
.slider-gear-scale-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}
.slider-gear-scale{
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8A8A8F;
}

/*桌面设置 - 电暖桌*/
.desktop-ctrl-button-wrapper{
  width: calc(100% + 32rpx);
  margin-left: -16rpx;
}
/*桌面设置指引*/
.desktop-ctrl-tips-wrapper{
  width: 570rpx;
  height: 800rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.desktop-ctrl-tips-title-wrapper{
  height: 104rpx;
  text-align: center;
  padding-top: 48rpx;
  width: 100%;
}
.desktop-ctrl-tips-title{
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
}
.desktop-ctrl-tips-content-wrapper{
  padding: 24rpx 48rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  flex: 1;
  box-sizing: border-box;
}
.desktop-ctrl-tips-content-title{
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #010101;
  margin-top: 40rpx;
}
.desktop-ctrl-tips-content-title:first-child{
  margin-top: 0;
}
.desktop-ctrl-tips-content-text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #8A8A8F;
}
.desktop-ctrl-tips-footer{
  width: 100%;
  height: 108rpx;
  background: #F6F6F6;
  box-shadow: 0 -1px 0 0 #E5E5E8;
  display: flex;
  justify-content: center;
  align-items: center;
}
.desktop-ctrl-tips-footer-text{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #267AFF;
}

/*模式选择对话框*/
.modal-wrapper {
  border-top-left-radius: 1rem;
  border-top-right-radius: 1rem;
  background: #ffffff;
}
.modal-wrapper .header {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  position: relative;
}
.modal-wrapper .header .left {
  position: absolute;
  left: 64rpx;
  top: 50%;
  transform: translateY(-50%);
  color: orangered;
  font-size: 32rpx;
  line-height: 64rpx;
}
.modal-wrapper .header .right {
  right: 80rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.modal-wrapper .header .center {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}
.modal-wrapper .options-wrapper .options-item {
  padding: 20rpx 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 32rpx;
  background-color: #f9f9f9;
  border-width: 2px;
  border-style: solid;
  border-color: transparent;
}
.space {
  width: 1rpx;
  height: 100%;
  float: left;
}
.modal-wrapper .options-wrapper .options-item:last-child {
  margin-bottom: 0;
}
.modal-wrapper .options-wrapper .options-item.active_cold {
  border-color: #267aff;
}
.modal-wrapper .options-wrapper .options-item.active {
  border-color: #ffaa10;
}
.modal-wrapper .options-item:last-child {
  border-bottom: none;
}
.modal-wrapper .options-item .icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.options-item .icon-wrapper .icon {
  width: 60%;
}
.modal-wrapper .options-item .label {
  margin-left: 30rpx;
}
.modal-wrapper .button-wrapper {
  border-top: 15rpx solid #eee;
}
.modal-wrapper .button-wrapper .button {
  border: none;
  border-radius: unset;
  padding: 25rpx 0;
  font-size: 34rpx;
  border-right: 2rpx solid #eee;
  flex: 1;
  text-align: center;
  color: #000;
}
.modal-wrapper .button-wrapper .button:last-child {
  border-right: unset;
}
.arrow-icon {
  width: 20px;
  height: 20px;
}
