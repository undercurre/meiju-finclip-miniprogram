}
.gear-control-wrapper .button {
  text-align: center;
  flex: 1;
  margin: 10rpx;
  padding: 10rpx 0;
  min-width: 80rpx;
}

/*童锁开关*/
.child-lock-wrapper .header {
  margin-bottom: 0;
}
.child-lock-wrapper .header .icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
}
.child-lock-wrapper .header .label {
  margin-left: 30rpx;
}
.child-lock-wrapper .header .value {
  margin-top: 8rpx;
}
.child-lock-wrapper .header .value.un-active {
