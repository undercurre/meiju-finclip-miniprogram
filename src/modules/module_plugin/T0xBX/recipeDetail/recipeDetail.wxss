.f-14 {
  font-size: 28rpx;
}
.f-16 {
  font-size: 32rpx;
}
.white {
  color: #fff;
}
.black {
  color: #000000;
}
.bg-white {
  background-color: white;
}
.bg-gray {
  background-color: #ecebec;
}
.bottom-fixed {
  position: fixed;
  left: 0;
  bottom: 0;
}
.pa-c {
  left: 50%;
  transform: translate(-50%, 0);
  -webkit-transform: translate(-50%, 0);
}
.pv-c {
  top: 50%;
  transform: translate(0, -50%);
  -webkit-transform: translate(0, -50%);
}
.av-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}
.b-common {
  content: " ";
  position: absolute;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.b-h-common {
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.b-v-common {
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}
.b-t-1 {
  content: " ";
  position: absolute;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  width: 100%;
  height: 1px;
  left: 0;
  border-bottom: 1px solid #eee;
}
.b-b-1 {
  content: " ";
  position: absolute;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  width: 100%;
  height: 1px;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #eee;
}
.b-l-1 {
  content: " ";
  position: absolute;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  left: -1px;
  top: 50%;
  transform: translate(0, -50%);
  -webkit-transform: translate(0, -50%);
  width: 1px;
  height: 100%;
  border-left: 1px solid #eee;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.column {
  display: flex;
  flex-direction: column;
}
.flex {
  flex: 1;
}
.borderless {
  border: none;
}
.click-hover {
  opacity: 0.5;
}
.button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.button.button-hover {
  opacity: 0.5;
}
.placeholder-loading {
  width: 100%;
  height: 100%;
}
.pull-up__loading {
  width: 100%;
  height: 100rpx;
}
.container {
  background-color: white;
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow-y: scroll;
}
.content {
  height: 100%;
  position: relative;
}
.recipe-cover {
  display: block;
  width: 750rpx;
  height: 494rpx;
}
.recipe-info {
  padding: 40rpx 40rpx 66rpx 40rpx;
}
.recipe-info .title {
  /* line-height: 76rpx;
  height: 76rpx; */
  margin-bottom: 20rpx;
}
.recipe-info .title text {
  font-size: 46rpx;
  color: #000000;
}
.recipe-info .desc {
  line-height: 40rpx;
  margin-bottom: 40rpx;
}
.recipe-info .desc text {
  font-size: 28rpx;
  color: #8a8a8f;
}
.recipe-info .info-item {
  line-height: 44rpx;
  height: 44rpx;
}
.recipe-info .info-item text {
  color: #8a8a8f;
  font-size: 32rpx;
}
.recipe-info .split {
  height: 2rpx;
  margin-top: 44rpx;
  margin-bottom: 44rpx;
  background-color: #f2f2f2;
}
.recipe-info .material-section {
  padding: 0rpx 10rpx 0rpx 10rpx;
  margin-bottom: 116rpx;
}
.recipe-info .material-section .section-title {
  line-height: 56rpx;
  height: 56rpx;
  margin-bottom: 36rpx;
}
.recipe-info .material-section .section-title .title {
  font-size: 40rpx;
  color: #000000;
  margin-right: 40rpx;
}
.recipe-info .material-section .material-items .material-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 44rpx;
  height: 44rpx;
  margin-bottom: 26rpx;
}
.recipe-info .material-section .material-items .material-item .item-name {
  flex: 1;
  font-size: 32rpx;
  color: #666666;
}
.recipe-info .material-section .material-items .material-item .item-weight {
  font-size: 32rpx;
  color: #595959;
}
.recipe-info .steps {
  padding: 0rpx 20rpx 0rpx 20rpx;
}
.recipe-info .steps .step {
  display: flex;
  flex-direction: column;
}
.recipe-info .steps .step .step-number {
  padding-left: 28rpx;
  line-height: 88rpx;
  height: 88rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}
.recipe-info .steps .step .step-number .number-text {
  font-size: 36rpx;
  color: #595959;
}
.recipe-info .steps .step .step-images {
  margin-bottom: 30rpx;
}
.recipe-info .steps .step .step-images .step-image {
  width: 630rpx;
  height: 350rpx;
  border-radius: 22rpx;
}
.recipe-info .steps .step .step-desc {
  padding-left: 28rpx;
  margin-bottom: 80rpx;
}
.recipe-info .steps .step .step-desc text {
  font-size: 34rpx;
  line-height: 50rpx;
  color: #595959;
}
.page-footer-placeholder {
  width: 750rpx;
  height: 164rpx;
}
.page-footer {
  width: 750rpx;
  height: 164rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: white;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow: 0 -2px 15px rgba(0, 0, 0, 0.2);
}
.page-footer .one-button-cooking {
  width: 300rpx;
  height: 80rpx;
  color: #fff;
  font-size: 40rpx;
  border-radius: 48rpx;
  background-color: #085cb9;
}
.page-footer .one-button-cooking.disable {
  background-color: #C7C7C7;
}
