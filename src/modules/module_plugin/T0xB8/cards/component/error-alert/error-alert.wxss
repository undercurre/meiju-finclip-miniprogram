.container {
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 343px;
    height: 100%;
    background: rgba(255, 59, 48, 0.1);
    border-radius: 8px;
    margin-left: 16px;
    padding-top: 10px;
    padding-bottom: 12px;
}

.rootViewStyle {
    position: relative;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.closeStyle {
    position: absolte;
    float: right;
    padding-right: 10px;
    width: 24px;
    height: 24px;
}

.imgStyle {
    position: relative;
    width: 64px;
    height: 72px;
    margin-left: 60rpx;
}

.titleStyle {
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FF3B30;
}

.contentStyle {
    position: relative;
    padding-top: 10px;
    padding-bottom: 32px;
    display: block;
    margin: auto;
    font-size: 12px;
    color: #8A8A8F;
    width: 70%;
    text-align: center;
}

.tip-bar {
    width: 90vw;
    height: 9vw;
    margin: auto;
    font-size: 12px;
    display: flex;
    align-items: center;
    border-radius: 5px;
}

.red {
    background-color: #ffebea;
    color: #FF3B30;
}
.grey {
    background-color: #EEE;
    color: #333;
}

.icon {
    width: 4vw;
    height: 4vw;
    margin-left: 4vw;
    margin-right: 2vw;
}
.content{
    letter-spacing: 1px;
    width: 70vw;
    text-overflow: ellipsis;
    overflow: auto;
}

.close {
    width: 6vw;
    height: 6vw;
    right: 7vw;
    position: absolute;
}

.swiper_container {
    height: 9vw;
    width: 100vw;
}

.swiper_item {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}