<!--plugin/T0xCA/guide/index.wxml-->
<view class="continer">
    <view>
      <ca-navbar backTo="{{backTo}}" navTitle="开箱安装" showView="1"></ca-navbar>
      <view style="margin-top: {{pageTop}}px;position: relative;">
        <image src="{{iconServiceUrl}}xjzy_step1_bg.png" style="width: {{devWidth}}px;height: {{(devWidth * 500)/750}}px;"></image>

        <view style="width: {{devWidth}}px;position: absolute;top:50%;left: 0px;" class="page-card column-start-container">
          <view style="width: {{devWidth - 40}}px;background-color: #FFFFFF;padding-bottom: 5rpx;" class="page-card-content column-start-container">
            <!-- 位置找平 -->
            <view bindtap="toStepView" data-id="1" class="row-start-container" style="width: {{devWidth - 40}}px;height: 242rpx;">
              <view style="width:260rpx;height:180rpx;margin-left:8px;" class="column-center-container">
                <view class="column-center-container" style="width:240rpx;height:180rpx;">
                  <image mode="widthFix" src="{{iconServiceUrl}}xjzy_step1_1.png" style="width:240rpx;height:180rpx;"></image>
                </view>
              </view>
              <!-- 说明 -->
              <view style="width: {{devWidth - 40 - 160 - 8}}px;height: 242rpx;" class="column-start-container">
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:30rpx;">
                  <view style="font-size: 32rpx;color: #333333;font-weight:600;margin-left: 20rpx;">位置找平</view>
                </view>
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:10rpx;">
                  <view style="font-size: 24rpx;color: #999999;font-weight:400;margin-left: 20rpx;margin-right: 8rpx;">
                    调整冰箱前脚，确保地面良好支撑。
                  </view>
                </view>
              </view>
            </view>
            <!-- 分割线 -->
            <view style="background-color: #E5E5E8;width: {{devWidth - 40 - 20}}px;height: 1px;"></view>

            <!-- 新机清理 -->
            <view bindtap="toStepView" data-id="2" class="row-start-container" style="width: {{devWidth - 40}}px;height: 242rpx;">
              <view style="width:260rpx;height:180rpx;margin-left:8px;" class="column-center-container">
                <view style="width:240rpx;height:180rpx;" class="column-center-container">
                  <image mode="widthFix" src="{{iconServiceUrl}}xjzy_step1_2.png" style="width:240rpx;height:180rpx;"></image>
                </view>
              </view>
              <!-- 说明 -->
              <view style="width: {{devWidth - 40 - 160 - 8}}px;height: 242rpx;" class="column-start-container">
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:30rpx;">
                  <view style="font-size: 32rpx;color: #333333;font-weight:600;margin-left: 20rpx;">新机清理</view>
                </view>
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:10rpx;">
                  <view style="font-size: 24rpx;color: #999999;font-weight:400;margin-left: 20rpx;margin-right: 8rpx;">
                    清理保护膜、泡沫等包材，确保冰箱清洁。
                  </view>
                </view>
              </view>
            </view>
            <!-- 分割线 -->
            <view style="background-color: #E5E5E8;width: {{devWidth - 40 - 20}}px;height: 1px;"></view>

            <!-- 静置2小时 -->
            <view class="row-start-container" data-id="3" style="width: {{devWidth - 40}}px;height: 242rpx;" bindtap="toStepView">
              <view style="width:260rpx;height:180rpx;margin-left:8px;" class="column-center-container">
                <view class="column-center-container" style="width:240rpx;height:180rpx;">
                  <image mode="widthFix" src="{{iconServiceUrl}}xjzy_step1_3.png" style="width:240rpx;height:180rpx;"></image>
                </view>
              </view>
              <!-- 说明 -->
              <view style="width: {{devWidth - 40 - 160 - 8}}px;height: 242rpx;" class="column-start-container">
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:30rpx;">
                  <view style="font-size: 32rpx;color: #333333;font-weight:600;margin-left: 20rpx;">静置4~6小时</view>
                </view>
                <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;margin-top:10rpx;">
                    <view class="column-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;">
                      <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;">
                        <view style="font-size: 24rpx;color: #999999;font-weight:400;margin-left: 20rpx;margin-right: 8rpx;">
                          运输搬运导致压缩机内部液
                        </view>
                      </view>
                      <view class="row-start-container" style="width: {{devWidth - 40 - 160 - 8}}px;">
                        <view style="font-size: 24rpx;color: #999999;font-weight:400;margin-left: 20rpx;">
                          体混动，新机需静置4~6小时。
                        </view>
                      </view>
                    </view>
                </view>
              </view>
            </view>
          </view>
        </view>

        <!-- 确定按钮 -->
        <view class="column-center-container" style="position: fixed;bottom: 64rpx;width: {{devWidth}}px;height: 88rpx;">
          <view style="height: 88rpx;width: {{devWidth - 100}}px;border-radius: 44rpx;background: #267AFF;" class="column-center-container" bindtap="finishAction">
            <view style="font-size:32rpx;color: #FFFFFF;font-weight: 500;">已完成</view>
          </view>
        </view>

      </view>
    </view>
</view>


