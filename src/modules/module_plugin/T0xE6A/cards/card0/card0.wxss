.container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
  /* background-color: #f9f9f9; */
  /* background-color: #0F0F24; */
  /* background-color: red; */
}

.flex-c {
  display: flex;
  flex-direction: column;
}

.flex-r {
  display: flex;
  flex-direction: row;
}

.j-c-center {
  justify-content: center;
}

.j-sp-between {
  justify-content: space-between;
}

.al-center {
  align-items: center;
}

.device-base-wrap {
  position: relative;
  width: 100%;
}

/* 设备状态 */
.device-state-wrap {
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 64rpx;
  padding-left: 20rpx;
  padding-right: 32rpx;
  margin: auto;
  /* background:  rgba(255,255,255,0.10); */
  width: fit-content;
  border-radius: 34rpx;
  z-index: 3;
}

.device-state-view {
  width: 12rpx;
  height: 12rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background-color: #267AFF;
}

.device-err-state {
  width: 12rpx;
  height: 12rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  background-color: #E55225;
}

.device-state-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: fit-content;
}

.device-state-text {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  font-weight: 500;
}

.state-vertical-line {
  height: 28rpx;
  width: 1px;
  margin-left: 32rpx;
  margin-right: 32rpx;
  background-color: #FFFFFF;
}

.card-view {
  display: flex;
  justify-content: center;
  text-align: center;
  background-color: transparent;
  padding: 16px 0;
}

.tap-view {
  width: 136px;
  background-color: transparent;
  --tabs-nav-background-color: transparent;
}

.special-tab {
  background-color: transparent;
  transition: all 0.25s ease-in-out;
}

.row-silder-tempure-item {
