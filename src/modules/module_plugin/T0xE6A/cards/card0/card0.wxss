}

.panel-custom-class {
  box-shadow: 0rpx 2rpx 20rpx 0rpx rgba(0, 0, 0, 0.09) !important;
  background-color: red;
  --panel-padding-top: 10rpx;
  --panel-padding-bottom: 10rpx;
}

.cell-custom {
  padding: 16rpx 18rpx;
}

.cell-custom .mx-cell__title_title,
.mx-cell__label {
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-right: 4rpx !important;
}

.cell-custom:after {
  border-bottom: 1px solid #000;
  bottom: 0;
  box-sizing: border-box;
  content: " ";
  left: 32rpx;
  pointer-events: none;
  position: absolute;
  right: 32rpx;
  transform: scaleY(.5);
  transform-origin: center;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: #E5E5E8;
}

