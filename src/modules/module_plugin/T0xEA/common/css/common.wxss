}
.tal{
    text-align: left;
}
.tac{
    text-align: center;
}

/*对话框*/
/*模式选择对话框*/
.modal-wrapper{
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
    background: #fff;
    padding-top: 40rpx;
}
.modal-wrapper .header{
    padding: 0 30rpx;
    position: relative;
    margin-bottom: 30rpx;
}
.modal-wrapper .header .left{
    position: absolute;
    left: 80rpx;
    top: 50%;
    transform: translateY(-50%);
    color: orangered;
    font-size: 32rpx;
    line-height: 32rpx;
}
.modal-wrapper .header .right{
    right: 80rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
.modal-wrapper .header .center{
    font-size: 34rpx;
    font-weight: 600;
    text-align: center;
}
.modal-wrapper .options-wrapper{
    /*padding-left: 20rpx;*/
}
.modal-wrapper .options-wrapper .options-item{
    border-bottom: 2rpx solid #eee;
    padding: 35rpx 40rpx 35rpx 0;
    margin-left: 30rpx;
}
.modal-wrapper .options-item:last-child{
    border-bottom: none;
}
.modal-wrapper .options-item .icon{
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    background: lightblue;
}
.modal-wrapper .options-item .label{
    margin-left: 30rpx;
}
.modal-wrapper .button-wrapper{
    border-top: 15rpx solid #eee;
}
.modal-wrapper .button-wrapper .button{
    border: none;
    border-radius: unset;
    padding: 25rpx 0;
    font-size: 34rpx;
    border-right: 2rpx solid #eee;
    flex: 1;
    text-align: center;
    color: #000;
}
.modal-wrapper .button-wrapper .button:last-child{
    border-right: unset;
}
