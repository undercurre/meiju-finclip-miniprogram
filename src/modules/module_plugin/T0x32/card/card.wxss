@import '../assets/css/common.wxss';
.new-tag {
  width: 107rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #000;
  border-bottom-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.tag-text {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #fff;
}
.container {
  padding-bottom: 30rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #f9f9f9;
}
.theme-color {
  background-color: #ffaa10;
}
/*禁用样式*/
.disabled-color {
  background-color: #7c879b;
}
.disabled {
  opacity: 0.4;
}
.controller-wrapper-disabled {
  opacity: 0.8;
}

.openMeiJuAPpp {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #8a8a8f;
  letter-spacing: 0;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 70rpx;
  text-align: center;
  white-space: nowrap;
  word-break: keep-all;
}
.openMeiJuAPpp .link {
  color: #267aff;
}
.openMeiJuAPpp .icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.bottom-fixed {
  margin: 0;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 70rpx;
}

.fixed-wrapper{
  position: fixed;
  top: -15rpx;
  left: 0;
  width: 100%;
  z-index: 99;
}

/*错误提示*/
.error-wrapper{
  /*margin-top: 50rpx;*/
  margin-bottom: 64rpx;
}
.error-title{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #232323;
  line-height: 32rpx;
}
.error-desc{
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #232323;
  line-height: 38rpx;
  margin-top: 20rpx;
  text-align: center;
}

.main-wrapper{
  width: 686rpx;
  margin: 0 auto;
}

/*启动区域*/
.device-status-wrapper {
  margin-bottom: 20rpx;
}
.device-running-status .divider {
  width: 2rpx;
  height: 16rpx;
  background: #ddd;
  margin: 0 16rpx;
}
.device-running-status .work-status-text {
  max-width: 370rpx;
  white-space: break-spaces;
  word-break: keep-all;
}
.device-status-wrapper .button-wrapper .button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  background: #ffaa10;
  margin-right: 30rpx;
}
.device-status-wrapper .button-wrapper .button:last-child {
  margin-right: 0;
}
.device-status-wrapper .button-wrapper .button .icon {
  width: 60%;
}

/*功能区域*/
.controller-wrapper {
  /*border-radius: 20rpx;*/
  /*background: #ffffff;*/
  /*box-shadow: 0 2rpx 30rpx 4rpx rgba(0, 0, 0, 0.06);*/
}
.controller-wrapper .header {
  height: 120rpx;
  width: 100%;
  border-bottom: 2rpx solid #eee;
}
.controller-wrapper .type-wrapper {
  flex: 1;
  text-align: center;
  position: relative;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.controller-wrapper .type-wrapper .text {
  font-size: 32rpx;
  color: #ccc;
}
.controller-wrapper .active .text {
  color: #ffaa10;
}
.controller-wrapper .type-wrapper .active-line {
  border-radius: 2rem;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  /*background: #FFAA10;*/
}

/*功能选项*/
.options-scroller-wrapper {
  overflow: hidden;
  width: 100%;
}
.content-wrapper {
  display: flex;
}
.options-wrapper {
  /*padding: 30rpx;*/
  box-sizing: border-box;
  width: 100%;
  flex-shrink: 0;
}
.menu-expand{
  height: unset;
}
.menu-shrink{
  height: 460rpx;
  overflow: hidden;
}
.btn-menu-expand{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 32rpx;
  text-align: center;
  margin-top: 32rpx;
}
.btn-menu-expand .icon{
  width: 25rpx;
  height: 25rpx;
  margin-left: 11rpx;
}
.arrow-up{
  transform: rotate(90deg);
}
.arrow-down{
  transform: rotate(270deg);
}
.grid-layout {
  display: grid;
  grid-row-gap: 20rpx;
  justify-content: space-between;
}
.grid-layout-double {
  grid-template-columns: 48% 48%;
}
.grid-layout-third {
  grid-template-columns: 31% 31% 31%;
}
.grid-layout-fourth {
  grid-template-columns: 24% 24% 24% 24%;
}
.grid-layout-third .type-options-wrapper,
.grid-layout-fourth .type-options-wrapper {
  position: relative;
  /*height: 200rpx;*/
}
.type-options-wrapper {
  /*background-color: #f9f9f9;*/
  /*border-radius: 20rpx;*/
  /*height: 250rpx;*/
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /*padding-bottom: 20rpx;*/

  width: 216rpx;
  height: 216rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,0.05);
  border-radius: 32rpx;
}
.type-options-wrapper .icon {
  width: 65rpx;
  /*min-width: 60rpx;*/
  height: 65rpx;
  background-size: 100%;
  background-position: center center;
  background-repeat: no-repeat;
  /* margin-bottom: -10rpx; */
}
.type-options-wrapper .label {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.type-options-wrapper .desc {
  font-size: 24rpx;
  color: #8B8B8C;
  line-height: 32rpx;
}
.single-row {
  flex: 1;
  flex-direction: row;
  height: 140rpx;
  padding-right: 40rpx;
}
.single-row .label {
  flex: 1;
  margin: 0 40rpx;
  text-align: left;
}
.single-row .icon {
  width: 100rpx;
  height: 100rpx;
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;
}

/*参数设置对话框*/
.modal-wrapper {
  border-top-left-radius: 1rem;
  border-top-right-radius: 1rem;
  background: #fff;
  padding-top: 40rpx;
}
.modal-wrapper .header {
  /*padding: 0 30rpx;*/
  position: relative;
}
.modal-wrapper .header .center {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}
.modal-wrapper .container{
  background-color: unset;
}
.modal-wrapper .desc-wrapper {
  font-size: 28rpx;
  line-height: 30rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.modal-wrapper .desc-wrapper .desc {
  border-left: 2rpx solid #666666;
  padding: 0 10rpx;
}
.modal-wrapper .desc-wrapper .desc:first-child {
  border-left: none;
}
.modal-wrapper .content {
  margin-top: 30rpx;
}
.modal-wrapper .options-wrapper {
  width: unset;
  margin: unset;
  max-height: 60vh;
  overflow-y: auto;
}
.modal-wrapper .options-wrapper .options-item {
  /*padding: 20rpx 30rpx;*/
  /*margin-bottom: 20rpx;*/
  background-color: #f9f9f9;
  border-radius: 32rpx;
  margin: 0 32rpx 20rpx 32rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  min-height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-wrapper .options-wrapper .options-item:last-child {
  margin-bottom: 0;
}
.modal-wrapper .options-wrapper .options-item.active {
  background-color: rgba(255, 170, 16, 0.1);
}
.modal-wrapper .options-item:last-child {
  border-bottom: none;
}
.modal-wrapper .options-item .icon-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  /*background-color: #ffaa10;*/
  margin-right: 20rpx;
}
.options-item .icon-wrapper .icon {
  width: 100%;
  height: 100%;
}
.options-item .value-label {
  border: 2rpx solid #ffaa10;
  border-radius: 2rem;
  font-size: 26rpx;
  line-height: 30rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
  color: #ffaa10;
}
.modal-wrapper .options-item .button {
  border: 2rpx solid #c7c7cc;
  border-radius: 2rem;
  padding: 10rpx 0;
  color: #8a8a8f;
  text-align: center;
  /*width: 30%;*/
  flex: 1;
  margin: 0 10rpx;
}
.modal-wrapper .options-item .button:first-child {
  margin-left: 0;
}
.modal-wrapper .options-item .button:last-child {
  margin-right: 0;
}
.modal-wrapper .options-item .button.active {
  border-color: #ffaa10;
  background-color: #ffaa10;
  color: #fff;
}
.options-item .text-wrapper {
  flex: 1;
}
.options-item .text-wrapper .desc {
  font-size: 24rpx;
  color: #bbb;
}
.options-item .extra-wrapper {
  color: #8a8a8f;
  font-size: 30rpx;
  line-height: 30rpx;
}
.options-item .extra-wrapper .icon-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.options-item .divider {
  margin: 20rpx 10rpx;
  height: 2rpx;
  background: #e5e5e8;
}
.options-item .desc-wrapper {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}
.options-item .icon-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.options-item .picker-column {
  color: rgba(0, 0, 0, 0.4);
}
.options-item .picker-column-selected {
  color: rgba(0, 0, 0, 1);
}
.modal-wrapper .time-unit{
  position: absolute;
  top: 177rpx;
}
.modal-wrapper .time-unit-work-time-hour{
  right: 50%;
}
.modal-wrapper .time-unit-work-time-min{
  right: 20%;
}
.modal-wrapper .time-unit-schedule-hour{
  right: 40%;
}
.modal-wrapper .time-unit-schedule-min{
  right: 20%;
}
.modal-wrapper .button-wrapper {
  border-top: 15rpx solid #eee;
}
.modal-wrapper .button-wrapper .button {
  border: none;
  border-radius: unset;
  padding: 25rpx 0;
  font-size: 34rpx;
  border-right: 2rpx solid #eee;
  flex: 1;
  text-align: center;
  color: #000;
}
.modal-wrapper .button-wrapper .button:last-child {
  border-right: unset;
}
.options-scroller-wrapper .title-box {
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.options-scroller-wrapper .title-text {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.options-scroller-wrapper .title-all-box {
  display: flex;
  align-items: center;
}
.options-scroller-wrapper .title-all {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #7c879b;
  margin-right: 5rpx;
}
.options-scroller-wrapper .icon-arrow {
  width: 25rpx;
  height: 25rpx;
}

.options-scroller-wrapper .bottom-tip-box {
  display: flex;
  justify-content: center;
  /* margin-bottom: 88rpx; */
}
.options-scroller-wrapper .bottom-tip-text {
  height: 37rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 37rpx;
  text-align: center;
}
.ctrl-btn {
  height: 80rpx;
  width: 80rpx;
  margin-right: 32rpx;
}
