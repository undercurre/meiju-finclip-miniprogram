/* m-ui/m-search/m-search.wxss */
.search-wrap{
  width: 750rpx;
  height: 84rpx;
  background-color: #F9F9F9;
}

.search-input {
	height: 60rpx;
  padding: 24rpx 32rpx 0;
  
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}
.input-sec {
	position: relative;
	height: 60rpx;
	display: flex;
	align-items: center;
	background: #FFFFFF;
	border-radius: 30rpx;
  flex: 1;
}
.input-text {
	font-size: 24rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #000000;
	padding-left: 56rpx;
  font-weight: bold;  /* kkk add */
  flex: 1;
}
.input-icon {
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	left: 16rpx;
	top: 50%;
	transform: translateY(-50%);
	background: no-repeat  no-repeat  -314rpx -166rpx;
	background-size: 800rpx auto; 
}
.del-icon-box{
	align-self: flex-end;
	display: flex;
	align-items: center;
	z-index: 100;
	width: 73rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
}
.del-icon{
	width: 36rpx;
	height: 36rpx;
	background: no-repeat  no-repeat  -384rpx -166rpx;
	background-size: 800rpx auto;
	margin: 0 auto;
}

.right-btn{
  color: #666666;
  margin-left: 32rpx;
}
