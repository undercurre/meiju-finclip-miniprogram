.nutrition-wrapper {
  width: 686rpx;
  /* background-color: #FFFFFF; */
  background-color: #f9f9f9;
  border-radius: 20rpx;
  margin-top: 50rpx;
  position: relative;
}
.nutrition-title {
  font-size: 28rpx;
  position: relative;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}
.nrv-icon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 8rpx;
}
.nutrition-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e8;
}
