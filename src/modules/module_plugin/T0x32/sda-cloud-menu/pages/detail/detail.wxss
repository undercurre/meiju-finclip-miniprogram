  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.nutrition-desc-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  width: 1rpx;
  height: 50%;
  background-color: #e5e5e8;
}

.nutrition-desc-item-title {
  font-size: 28rpx;
}
.nutrition-desc-item-desc {
  font-size: 24rpx;
  opacity: 0.7;
}

.nutrition-title-right-text {
  font-family: PingFangSC-Semibold;
