<!--sub-package/sda-cloud-menu/component/menu-item/menu-item.wxml-->
<view class="wrapper"
      style="{{imageStyle&&('width:'+imageStyle.width+'rpx;')}}"
      bindtap="onClickRecipe">
  <!--食谱图片-->
  <image class="menu-image"
         style="{{imageStyle&&('width:'+imageStyle.width+'rpx;height:'+imageStyle.height+'rpx;')}}"
         src="{{model.image}}" mode="scaleToFill"></image>
  <view class="info-wrapper"
        style="{{infoWrapperStyle&&('padding:'+infoWrapperStyle.padding+'rpx;')}}">
    <!--食谱名称-->
    <text class="menu-name"
          style="{{titleStyle&&('font-size:'+titleStyle.fontSize+'rpx;')}}">{{model.name}}</text>
    <!--食谱描述-->
    <view class="desc-wrapper">
      <view wx:for="{{model.descArr}}"
            wx:for-item="desc"
            wx:key="index">
        <text class="desc-line" wx:if="{{index}}">|</text>
        <text class="desc"
              style="{{descStyle&&('font-size:'+descStyle.fontSize+'rpx;')}}">{{desc}}</text>
      </view>
    </view>
    <view class="footer-wrapper">
      <!--作者信息-->
      <view class="author-info-wrapper">
        <image class="author-avatar" src="{{model.author.avatar}}"></image>
        <text class="author-name"
              style="{{descStyle&&('font-size:'+descStyle.fontSize+'rpx;')}}">{{model.author.name}}</text>
      </view>
      <!--收藏数量-->
      <text class="collect-num"
            style="{{descStyle&&('font-size:'+descStyle.fontSize+'rpx;')}}">
        <!--{{model.collectNum}}收藏-->
      </text>
    </view>
  </view>

</view>
