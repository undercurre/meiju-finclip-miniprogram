/* plugin/T0xAC/electric/electric.wxss */
.sliderContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: aqua; */
  width: 100%;
  /* background-color: aqua; */
}

.canvas {
  height: 200px;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  margin: 0 20px 20px 20px;
  border-bottom: 0.5px solid #efefef;
  padding-bottom: 10px;
}

.ma {
  margin: 10px 0 20px 0;
}

.set-bottom {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 20px;
  left: 0;
  font-size: 12px;
  color: #a1a1a1;
  width: 100vw;
}

.elec-range {
  display: flex;
  position: relative;
  top: -20rpx;
  flex-direction: column;
  /* align-items: center; */
  left: 30rpx;
  width: 150rpx;
}

.elec-range-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 15rpx;
}

.elec-range-text {
  font-size: 24rpx;
}

.elec-rang-detail {
  display: flex;
}

.elec-range-date {
  text-align: center;
  position: relative;
  left: 40rpx;
  top: 5rpx;
}
