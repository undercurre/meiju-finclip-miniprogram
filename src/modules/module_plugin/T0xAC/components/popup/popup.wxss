/* components/popup/popup.wxss */
.container {
  width: 100%;
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999999;
}

.popup-box {
  width: 100%;
  height: 150px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  background-color: #ffffff;
  position: absolute;
  /* left: 50%;
  top: 50%;
  transform: translate(-50%, -50%); */
  left: 0;
  bottom: 0;
  margin: auto;
  z-index: 999999999;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  animation: mymove .5s;
  -webkit-animation: mymove .5s;
}


@keyframes mymove {
  from {
    scale: 0;
  }

  to {
    scale: 1;
  }
}

@-webkit-keyframes mymove {
  from {
    scale: 0;
  }

  to {
    scale: 1;
  }
}