/* components/time-range-selector/TimeRangeSelector.wxss */
.whole-container {
  position: relative;
  width: 300px;
  margin-top: 25px;
  font-size: 12px;
}

.process {
  height: 2px;
  width: 250px;
  /* background-image: linear-gradient(to right, #dea7ce, #afb4e7); */
  background-color: #267aff;
  position: absolute;
  bottom: 5px;
  left: 20px;
  z-index: -1;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}

.point {
  height: 8px;
  width: 8px;
  border-radius: 5px;
  background-color: #fff;
  /* border: 1px solid rgba(214, 98, 166, 1); */
  border: 1px solid #267aff;
}

.point-selected {
  height: 10px;
  width: 10px;
  border-radius: 6px;
  /* background-image: linear-gradient(to right, #dea7ce, #afb4e7); */
  background-color: #267aff;
  border: 1px solid #fff;
}

.lie {
  display: flex;
  justify-content: space-around;
}

.selected-text {
  font-weight: 600;
}

.on-top-text {
  position: absolute;
  top: -25px;
  left: -45px;
  width: 100px;
  text-align: center;
}