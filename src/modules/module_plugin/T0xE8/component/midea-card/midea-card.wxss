/* plugin/T0xFC/component/media-card.wxss */
@import "../../assets/css/common.wxss";
.card-wrapper{
    padding: 20rpx 32rpx;
    border-radius: 32rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 3rpx 5rpx 10rpx 0 rgba(0,0,0,0.05);
    margin-bottom: 60rpx;
}
.center-wrapper{
    flex: 1;
}
.icon{
    width: 100rpx;
    display: block;
}
.disabled.card-wrapper{
    background: rgba(255, 255, 255, 0.6);
}
.disabled.icon,.disabled .text{
    opacity: .4;
}
.text{
    font-size: 32rpx;
    line-height: 32rpx;
}
