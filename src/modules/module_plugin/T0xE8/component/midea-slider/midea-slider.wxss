/* plugin/T0xFC/component/media-slider/media-slider.wxss */
@import "../../assets/css/common.wxss";

/*禁用样式*/
.disabled{
    opacity: .4;
}
.disabled .icon,.disabled .slider-active-process,.disabled .slider-drag{
    background: #7C879B;
}

.slider-transition{
    transition: all ease-in-out .3s;
}

.slider-wrapper {
    width: 686rpx;
    height: 220rpx;
    background: #F9F9F9;
    border-radius: 32rpx;
    padding: 20rpx 32rpx;
    box-sizing: border-box;
    margin-bottom: 16rpx;
}
.slider-header {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
}
.slider-title-text {
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #333333;
    line-height: 46rpx;
}
.slider-header-line {
    width: 0rpx;
    height: 24rpx;
    border: 1px solid #DDDDDD;
    margin: 0 14rpx;
}
.icon{
    width: 40rpx;
    height: 40rpx;
    background: #F2F2F2;
    border-radius: 100%;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
    font-size: 32rpx;
}
.slider-process-wrapper{
    flex: 1;
    margin: 0 24rpx;
    position: relative;
    height: 40rpx;
    background: #F2F2F2;
    border-radius: 20rpx;
    overflow: hidden;
}
.slider-process-bar {
    position: absolute;
    display: flex;
    justify-content: flex-end;
    width: 100%;
    height: 40rpx;
    border-radius: 20rpx;
}
.slider-ball-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40rpx;
    width: 40rpx;
}





.slider-process{
    position: relative;
    height: 40rpx;
    background: #F2F2F2;
    border-radius: 20rpx;
    overflow: hidden;
}
.slider-active-process{
    position: absolute;
    left: 0;
    top: 0;
    height: 40rpx;
    width: 600rpx;
    transform: translateX(-100%);
    background: #FFAA10;
    border-radius: 20rpx;
}
.bar-container {
    position: relative;
    /* top: -40rpx; */
    margin-left: 40rpx;
    height: 40rpx;
}
.ball-container {
    position: relative;
    margin-right: 40rpx;
    margin-top: -40rpx;
}
.slider-drag-wrapper{
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    border-radius: 100%;
}
.slider-drag{
    border-radius: 100%;
    width: 24rpx;
    height: 24rpx;
    background: #ffffff;
}
.slider-value-item{
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #8A8A8F;
    letter-spacing: 0;
    line-height: 20rpx;
}
.slider-value-wrapper{
    width: 82%;
    margin-top: 16rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}
