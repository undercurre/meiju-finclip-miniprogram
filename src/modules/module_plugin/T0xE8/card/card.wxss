    width: 100%;
    height: 44rpx;
    /* padding-left: 32rpx; */
    box-sizing: border-box;
    overflow: hidden;
    line-height: 60rpx;
    font-size: 18px;
    white-space: nowrap;
    position: fixed;
    top: 0rpx;
    left: 0;
    z-index: 98;
    display: flex;
    align-items: center;
    background-color: #F9EDE3;
