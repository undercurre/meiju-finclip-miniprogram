  color: #FF6A4C;
}
.disabled{
  opacity: .4;
}

.connecting-icon{
  width: 110rpx;
  height: 110rpx;
}
.connecting-text{
  font-size: 40rpx;
  color: #666666;
  padding-left: 50rpx;
  margin-top: 32rpx;
}
.loading-dot{
  width: 50rpx;
}

.connected-header{
  height: 80rpx;
  font-size: 28rpx;
