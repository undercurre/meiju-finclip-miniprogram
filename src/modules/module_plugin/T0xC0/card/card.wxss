/*2021.10.19之前*/
.container {
    /*background: #fff;*/
    border-radius: 10rpx;
    /* padding-top: 128rpx; */
    width: 100%;
    height: 100%;
    position: relative;
}

.main-block {
  padding-top: 178rpx;
  width: 100%;
  height: calc(100% - 178rpx);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.inner-circle {
  /*height: 320rpx;*/
  width: 320rpx;
  /*border: 2px solid #E5E5E8;*/
  border-radius: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  z-index: 99;
}

.inner-circle-center {
  justify-content: center;
}

.scale-weight {
  /*font-size: 80rpx;*/
  font-size: 100rpx;
  line-height: 140rpx;
  /*color: #C9C9C9;*/
  color: #1E1F24;
  letter-spacing: 0;
  text-align: center;
}

.adjust-unit {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}

.adjust-unit-text {
  font-size: 40rpx;
  color: #f7b500;
  letter-spacing: 0;
  text-align: center;
  margin: 0 50rpx;
}

.adjust-unit-arrow {
  height: 32rpx;
  width: 18rpx;
}

.battery {
  margin-top: 35rpx;
}

.battery-text {
  font-size: 24rpx;
  color: #C0C0C0;
  letter-spacing: 0;
  text-align: center;
}

.clear {
  width: 626rpx;
  height: 102rpx;
  background: #FFF2DB;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 32rpx;
}

.clear-text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  text-align: center;
}

.exclamation {
  height: 120rpx;
  width: 33rpx;
}

.error-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 104rpx;
}

.error-hint > text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}
