.device-offline-title{
  font-size: 60rpx;
  color: #666666;
  /*margin-top: 60rpx;*/
  margin-bottom: 20rpx;
}
.device-connect-tip-image{
  width: 300rpx;
  height: 225rpx;
}

.error-tip{
  font-size: 32rpx;
  color: #8A8A8F;
  margin-top: 100rpx;
}

.button-reset{
  width: 360rpx;
  height: 90rpx;
  background: #1E1F24;
  border-radius: 2rem;
  margin-top: 150rpx;
