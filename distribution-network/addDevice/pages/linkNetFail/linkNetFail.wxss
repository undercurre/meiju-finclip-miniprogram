.switch-wifi {
  z-index: 100;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #267aff;
  line-height: 24px;
  position: absolute;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
}

.show-psw {
  z-index: 100;
  width: 24px;
  height: 24px;
  position: absolute;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
}

.input-area {
    position: relative;
}

.tip-list {
    width: 88%;
    margin: 24rpx auto 24rpx;
    font-size: 24rpx;
    color: #666666;
    text-align: left;
    line-height: 1.4;
    vertical-align: top;
}

.tip2{
    margin-top: 28rpx;
}
.q-mark {
    width: 32rpx;
    height: 32rpx;
    margin-left: 8rpx;
    background-color: #C7C7CC;
    border-radius: 50%;
    color: #FFF;
    text-align: center;
    line-height: 32rpx;
}

.circle {
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #666666;
    margin-right: 12rpx;
    vertical-align: middle;
}

