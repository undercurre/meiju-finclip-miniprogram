.notice-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.block {
  display: block;
  text-align: center;
}

.tip-box{
  display: flex;
  align-items: center;
  margin-right: 8rpx;
}
.tip-icon{
  width:32rpx;
  height: 32rpx;
}

/* .thick {
  font-weight: 600;
} */

.blue {
  color: rgb(52, 106, 224);
}

.text-time{
  font-weight: bold;
  padding:0 5rpx;
}

.title {
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #000000;
  letter-spacing: 0;
  margin-top: 30rpx;
  line-height: 48rpx;
  font-weight: 500;
}

.scan-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.link-flow {
  width: 100%;
  margin: 112rpx auto 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

