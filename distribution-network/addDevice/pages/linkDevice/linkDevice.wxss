.device-img {
  display: inline-block;
  max-width: 196rpx;
  max-height: 196rpx;
  z-index:100;
}

.service-img{
  width:180rpx;
  height: 180rpx;
}

.progressBar {
  margin: 68rpx auto 40rpx;
  width: 284rpx;
  height: 8rpx;
  background: #e5e5e8;
  border-radius: 26px;
}

.finish {
  width: 10%;
  height: 8rpx;
  background: #267aff;
  border-radius: 36px 0 0 36px;
}

.progress-list {
  height: 150rpx;
}

.step {
  display: flex;
  align-items: center;
  justify-content: center;
}

.step:nth-child(2){
  margin:32rpx 0;
}

.step-desc{
  font-size: 28rpx;
}

