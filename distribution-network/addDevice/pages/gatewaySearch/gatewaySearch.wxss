/* distribution-network/addDevice/pages/gatewaySearch/gatewaySearch.wxss */
@import '../../../../pages/common/css/common.wxss';

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.back-icon{
  width:56rpx;
  height:56rpx;
}

.bg-white {
  background: #fff;
}

.margin-common {
  margin-top: 1vh;
}

.head-item-scan {
  height: 180rpx;
  flex: 1;
  text-align: center;
}

.head-item-line {
  width: 2rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
}

.head-item-line-small {
  width: 2rpx;
  height: 54rpx;
  background-color: #eeeeee;
}

.search {
  font-size: 40rpx;
  color: rgba(255,255,255,0.80);
  text-align: center;
  margin-left: 158rpx;
  margin-right: 158rpx;
}

.searchNotice {
  font-size: 28rpx;
  color: #000000;
  text-align: center;
}

.main-no-device {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  position: relative;
}

.delay-tips {
  position: absolute;
  width: 100%;
  left: 0;
  padding-bottom: 120rpx;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
}
.delay-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(255,255,255,0.40);
  text-align: center;
  line-height: 18px;
}

page {
  background: #151617;
}

.device-wrap {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}
.main-has-device {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 100%;
  overflow: hidden;
}
.main-has-device .has-device {
  padding-left: 32rpx !important;
}
.bottom-button-sub {
  padding: 32rpx 0rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bottom-wrap-sub .save-sub {
  background: #B35336;
  width: 92.5%;
  height: 92rpx;
  margin: auto;
  line-height: 92rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.bottom-wrap-sub {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background: #151617;
}

.continue-search-right .searching-sub {
  font-size: 40rpx ;
  color: rgba(255,255,255,0.80);
}
.content-device {
  padding: 0 30rpx !important;
}
.device-list {
  flex: 1;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.device-item {
  width: 100%;
  height: 168rpx;
  background: rgba(177,193,234,0.05);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.item-left, .device-icon {
  width: 112rpx;
  height: 112rpx;
  display: block;
}
.item-center {
  flex: 1;
  padding: 0 24rpx;
  display: flex;
  height: 100%;
  align-items: center;
  width: 0;
}
.device-title .tag{
  font-size: 32rpx;
  color: #FFFFFF;
  height: 44rpx;
  line-height: 44rpx;
  display: inline-block;
}
.device-title {
  height: 44rpx;
  display: flex;
  align-items: center;
}
.device-title .line-sub {
  height: 32rpx;
  width: 2rpx;
  background: #FFFFFF;
  margin: 0 20rpx 0;
  display: inline-block;
}
.device-status {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.device-status-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  display: block;
}
.device-status.success {
  color: #06C270;
}
.device-status.fail {
  color:  #B35336;
}
.item-right {
  display: flex;
  align-items: center;
}
.item-right text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.40);
}
.mx-dialog__message {
  text-align: left !important;
}