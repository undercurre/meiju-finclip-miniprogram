.page {
    display: flex;
    flex-direction: column;
    height: 100vh;
    align-items: center;
}

.title {
    padding-top: 32rpx;
    font-family: PingFangSC-Semibold;
    font-size: 48rpx;
    color: rgba(255,255,255,0.80);
    letter-spacing: 0;
    text-align: center;
    font-weight: 600;
}

.sub {
    padding-top: 120rpx;
    width: 686rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: rgba(255,255,255,0.60);
    font-weight: 400;
}

.wrapper {
    margin-top: 40rpx;
    width: 686rpx;
    height: 156rpx;
    background: rgba(255,255,255,0.05);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.inner_wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.icon {
    width: 64rpx;
    height: 64rpx;
    color: red;
    padding: 0 32rpx;
}

.right_icon {
    width: 40rpx;
    height: 40rpx;
    padding-right: 12rpx;
}

.desc {
    opacity: 0.8;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: left;
    font-weight: 400;
}

.text_wrapper {
    display: flex;
    flex-direction: column;
    justify-content: left;
}

.sub_desc {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: rgba(255,255,255,0.60);
    letter-spacing: 0;
    text-align: center;
    font-weight: 400;
}