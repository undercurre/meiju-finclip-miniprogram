.authTop {
  text-align: center;
  margin-top: 192rpx;
}

.imgWrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 52rpx;
}

.icon-img {
  width: 144rpx;
  height: 144rpx;
  object-fit: cover; 
  overflow: hidden;
}
.icon-img image {
  width: 144rpx;
  height: 144rpx;
  position: relative;
}

.center-icon-img {
  width: 72rpx;
  height: 72rpx;
  margin: 0 28rpx 0 28rpx;
}

.text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: rgba(255,255,255,0.80);
  line-height: 28rpx;
  font-weight: 400;
}

.authBottom {
  position: absolute;
  bottom: 108rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.authBtn {
  width: 654rpx;
  height: 96rpx;
  background-color: #B35336;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: rgba(255,255,255,0.80);
  letter-spacing: 0;
  text-align: center;
  line-height: 96rpx;
  font-weight: 400;
  margin-bottom: 32rpx;
}

.cancelBtn {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #B35336;
  text-align: center;
  font-weight: 400;
}