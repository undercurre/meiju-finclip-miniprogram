.input-icon {
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	left: 16rpx;
	top: 50%;
	transform: translateY(-50%);
	background: no-repeat  no-repeat  -314rpx -166rpx;
	background-size: 800rpx auto; 
}
.placeholder{
	position: absolute;
	left: 60rpx;
	top: 50%;
	transform: translateY(-50%);
	color: #8a8a8f;
	font-size: 28rpx;
	font-weight: bold;
}
.del-icon-box{
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	z-index: 100;
	width: 88rpx;
	height: 72rpx;
	display: flex;
	align-items: center;
}
.del-icon{
	width: 36rpx;
	height: 36rpx;
	background: no-repeat  no-repeat  -384rpx -166rpx;
	background-size: 800rpx auto;
	margin: 0 auto;
}
.search-result {
  font-size: 28rpx;
  color: #8a8a8f;
  text-align: center;
  padding: 0 20rpx 40rpx;
}
.search-result image {
  display: block;
  width: 480rpx;
  height: 400rpx;
  margin: 0 auto 44rpx;
}
.result-text {
  margin-top: 6rpx;
  line-height: 1.5;
}
.icon-del {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: no-repeat no-repeat -30rpx -30rpx;
  background-size: 800rpx auto;
}
